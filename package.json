{
  "name": "brumisa3",
  "version": "1.0.0",
  "description": "CrÃ©ateur de fiches de personnages JDR immersives - brumisater",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon src/app.js",
    "dev:full": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "nodemon src/app.js",
    "dev:client": "npm run watch:css",
    "watch:css": "tailwindcss -i ./src/styles/tailwind.css -o ./public/css/style.css --watch",
    "build:css": "tailwindcss -i ./src/styles/tailwind.css -o ./public/css/style.css --minify",
    "db:init": "node src/database/init.js",
    "db:migrate": "node src/database/migrate.js",
    "db:seed": "node src/database/seed.js",
    "test": "jest",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "test:all": "npm run test:unit && npm run test:integration",
    "lint": "eslint src --fix",
    "format": "prettier --write \"src/**/*.{js,ejs}\"",
    "docs:generate": "jsdoc -c jsdoc.json",
    "docs:clean": "rimraf docs",
    "logs:set-level": "node scripts/set-log-level.js",
    "logs:purge": "node scripts/purge-logs.js"
  },
  "dependencies": {
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.16",
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "ejs": "^3.1.9",
    "express": "^4.18.2",
    "express-ejs-layouts": "^2.5.1",
    "express-rate-limit": "^7.1.5",
    "express-session": "^1.17.3",
    "fs-extra": "^11.2.0",
    "handlebars": "^4.7.8",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "moment": "^2.29.4",
    "multer": "^2.0.2",
    "pdfkit": "^0.17.1",
    "pg": "^8.16.3",
    "resend": "^4.7.0",
    "stripe": "^18.3.0",
    "uuid": "^9.0.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/pg": "^8.15.4",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "eslint": "^9.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.0.4",
    "jsdoc": "^4.0.4",
    "nodemon": "^3.0.3",
    "postcss": "^8.4.32",
    "prettier": "^3.1.1",
    "rimraf": "^6.0.1",
    "supertest": "^7.1.3",
    "tailwindcss": "^3.3.6"
  },
  "keywords": [
    "jdr",
    "pdf",
    "personnage",
    "fiche",
    "monsterhearts",
    "alpine",
    "mvc"
  ],
