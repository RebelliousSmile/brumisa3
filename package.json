{
  "name": "generateur-pdf-jdr",
  "version": "1.0.0",
  "description": "Générateur de PDFs pour fiches de personnages et aides de jeu JDR",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/app.js",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "nodemon src/app.js",
    "dev:client": "npm run watch:css",
    "watch:css": "tailwindcss -i ./src/styles/tailwind.css -o ./public/css/style.css --watch",
    "build:css": "tailwindcss -i ./src/styles/tailwind.css -o ./public/css/style.css --minify",
    "db:init": "node src/database/init.js",
    "db:migrate": "node src/database/migrate.js",
    "db:seed": "node src/database/seed.js",
    "test": "jest",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --fix",
    "format": "prettier --write \"src/**/*.{js,ejs}\"",
    "logs:set-level": "node scripts/set-log-level.js",
    "logs:purge": "node scripts/purge-logs.js"
  },
  "dependencies": {
    "express": "^4.18.2",
    "express-session": "^1.17.3",
    "express-ejs-layouts": "^2.5.1",
    "ejs": "^3.1.9",
    "sqlite3": "^5.1.6",
    "bcryptjs": "^2.4.3",
    "uuid": "^9.0.1",
    "multer": "^1.4.5",
    "puppeteer": "^21.6.1",
    "fs-extra": "^11.2.0",
    "moment": "^2.29.4",
    "winston": "^3.11.0",
    "joi": "^17.11.0",
    "dotenv": "^16.3.1",
    "helmet": "^7.1.0",
    "cors": "^2.8.5",
    "express-rate-limit": "^7.1.5",
    "cookie-parser": "^1.4.6"
  },
  "devDependencies": {
    "nodemon": "^3.0.3",
    "concurrently": "^8.2.2",
    "tailwindcss": "^3.3.6",
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.32",
    "eslint": "^8.56.0",
    "prettier": "^3.1.1",
    "jest": "^29.7.0",
    "supertest": "^6.3.3"
  },
  "keywords": ["jdr", "pdf", "personnage", "fiche", "monsterhearts", "alpine", "mvc"],
  "author": "RebelliousSmile",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0"
  }
}