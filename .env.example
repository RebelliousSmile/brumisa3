# Configuration serveur
PORT=3000
NODE_ENV=development

# Base de données
DATABASE_PATH=./data/database.sqlite

# Sessions
SESSION_SECRET=your-super-secret-session-key-change-in-production
SESSION_MAX_AGE=86400000

# Codes d'accès (changez en production)
CODE_PREMIUM=123456
CODE_ADMIN=789012

# Répertoires
DATA_DIR=./data
OUTPUT_DIR=./output
UPLOAD_DIR=./uploads
LOG_DIR=./logs

# Logs
LOG_LEVEL=info

# Sécurité
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# PDF
PDF_TIMEOUT=30000
PDF_MAX_SIZE=10485760