# =============================================================================
# Configuration d'environnement - brumisa3
# =============================================================================
# Copiez ce fichier vers .env et configurez vos valeurs

# =============================================================================
# APPLICATION
# =============================================================================
NODE_ENV=development
PORT=3000
HOST=localhost
BASE_URL=http://localhost:3000

# =============================================================================
# BASE DE DONNEES POSTGRESQL
# =============================================================================
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=brumisa3
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_postgres_password

# URL complète de connexion (optionnel, remplace les paramètres individuels)
# DATABASE_URL=postgresql://postgres:password@localhost:5432/brumisa3

# =============================================================================
# SESSIONS & SECURITE
# =============================================================================
SESSION_SECRET=your-super-secret-session-key-change-in-production-min-32-chars
SESSION_MAX_AGE=86400000

# =============================================================================
# CODES D'ACCES
# =============================================================================
CODE_PREMIUM=123456
CODE_ADMIN=789012

# =============================================================================
# EMAIL (RESEND)
# =============================================================================
RESEND_API_KEY=your_resend_api_key
RESEND_FROM_EMAIL=noreply@yourdomain.com
RESEND_FROM_NAME=Brumisa3 - Générateur PDF JDR

# Emails de test et administration
ADMIN_EMAIL=admin@yourdomain.com
TEST_EMAIL=test@yourdomain.com

# Force l'envoi d'emails réels même en développement (true/false)
FORCE_REAL_EMAILS=false

# =============================================================================
# STRIPE (DONATIONS)
# =============================================================================
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# =============================================================================
# REPERTOIRES
# =============================================================================
DATA_DIR=data
OUTPUT_DIR=output
UPLOAD_DIR=uploads
LOG_DIR=logs

# =============================================================================
# LOGS
# =============================================================================
LOG_LEVEL=info

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# =============================================================================
# PDF GENERATION
# =============================================================================
PDF_TIMEOUT=30000
PDF_MAX_SIZE=10485760

# =============================================================================
# VARIABLES DE TEST (pour Jest)
# =============================================================================
# Ces variables sont utilisées uniquement lors des tests
# TEST_POSTGRES_HOST=localhost
# TEST_POSTGRES_PORT=5432
# TEST_POSTGRES_DB=brumisa3_test
# TEST_POSTGRES_USER=postgres
# TEST_POSTGRES_PASSWORD=password