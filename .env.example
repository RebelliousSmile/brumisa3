# Configuration serveur
PORT=3074
NODE_ENV=development

# Base de données PostgreSQL
DATABASE_URL=postgresql://user:password@localhost:5432/generateur_pdf_jdr
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_DB=generateur_pdf_jdr

# Sessions
SESSION_SECRET=your-super-secret-session-key-change-in-production
SESSION_MAX_AGE=86400000

# Codes d'accès (changez en production)
CODE_PREMIUM=123456
CODE_ADMIN=789012

# Répertoires
DATA_DIR=./data
OUTPUT_DIR=./output
UPLOAD_DIR=./uploads
LOG_DIR=./logs

# Logs
LOG_LEVEL=info

# Sécurité
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# PDF
PDF_TIMEOUT=30000
PDF_MAX_SIZE=10485760