  id                 Int             @id @default(autoincrement())
  nom                String          @db.VarChar(255)
  email              String?         @unique @db.VarChar(255)
  role               String          @default("UTILISATEUR") @db.VarChar(50)
  code_acces         String?         @db.VarChar(255)
  session_id         String?         @db.VarChar(255)
