<%- contentFor('head') %>
<meta name="description" content="<%= description %>">
<meta name="keywords" content="jdr, <%= systeme %>, système de jeu, fiche personnage, pdf">

<%- contentFor('body') %>
<main class="min-h-screen bg-gray-900">
    <div class="relative">
        <!-- Background -->
        <div class="absolute inset-0 bg-gradient-to-br from-gray-900 via-gray-800 to-black"></div>
        <div class="absolute inset-0 bg-gradient-to-r from-transparent via-gray-800/20 to-transparent"></div>
        
        <!-- Contenu principal -->
        <div class="relative z-10 px-4 py-16">
            <div class="max-w-6xl mx-auto">
                <!-- En-tête -->
                <div class="text-center mb-12">
                    <h1 class="text-4xl md:text-6xl font-bold text-white mb-6">
                        <%= config.nom %>
                    </h1>
                    <p class="text-xl text-gray-300 mb-8 max-w-3xl mx-auto">
                        <%= config.description %>
                    </p>
                </div>

                <!-- Liste des univers disponibles -->
                <% if (config.univers) { %>
                <div class="mb-12">
                    <h2 class="text-2xl font-bold text-white mb-6 text-center">Univers disponibles</h2>
                    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                        <% Object.entries(config.univers).forEach(([universCode, universConfig]) => { %>
                        <div class="bg-gray-800 rounded-lg p-6 border border-gray-700 hover:border-gray-600 transition-all cursor-pointer group"
                             onclick="window.location.href='/systeme/<%= systeme %>/<%= universCode %>'">
                            <div class="flex items-center mb-4">
                                <div class="w-12 h-12 rounded-full flex items-center justify-center mr-4"
                                     style="background-color: <%= universConfig.couleur || '#6B7280' %>20; color: <%= universConfig.couleur || '#6B7280' %>;">
                                    <i class="ra ra-dice text-2xl"></i>
                                </div>
                                <h3 class="text-xl font-bold text-white group-hover:text-gray-100">
                                    <%= universConfig.nom %>
                                </h3>
                            </div>
                            <p class="text-gray-300 mb-4">
                                <%= universConfig.description %>
                            </p>
                            <div class="flex items-center justify-between">
                                <div class="flex items-center text-sm text-gray-400">
                                    <i class="fas fa-palette mr-2"></i>
                                    <span style="color: <%= universConfig.couleur || '#6B7280' %>;">
                                        <%= universConfig.couleur ? 'Thème personnalisé' : 'Thème par défaut' %>
                                    </span>
                                </div>
                                <i class="fas fa-arrow-right text-gray-400 group-hover:text-gray-300 transition-colors"></i>
                            </div>
                        </div>
                        <% }); %>
                    </div>
                </div>
                <% } %>

                <!-- Actions principales pour le système -->
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-12">
                    <!-- Créer un personnage générique -->
                    <div class="bg-gray-800 rounded-lg p-6 border border-gray-700 hover:border-gray-600 transition-colors">
                        <div class="flex items-center mb-4">
                            <div class="w-12 h-12 bg-blue-600/20 rounded-full flex items-center justify-center mr-4">
                                <i class="ra ra-player-king text-blue-400 text-2xl"></i>
                            </div>
                            <h2 class="text-xl font-bold text-white">Créer un Personnage</h2>
                        </div>
                        <p class="text-gray-300 mb-4">
                            Créez une fiche de personnage pour le système <%= config.nom %>.
                        </p>
                        <a href="/personnages/nouveau?systeme=<%= systeme %>" 
                           class="inline-flex items-center px-4 py-2 bg-blue-600 text-white rounded-lg font-medium hover:bg-blue-700 transition-colors">
                            Commencer
                            <i class="fas fa-arrow-right ml-2"></i>
                        </a>
                    </div>

                    <!-- Document générique -->
                    <div class="bg-gray-800 rounded-lg p-6 border border-gray-700 hover:border-gray-600 transition-colors">
                        <div class="flex items-center mb-4">
                            <div class="w-12 h-12 bg-green-600/20 rounded-full flex items-center justify-center mr-4">
                                <i class="fas fa-file-alt text-green-400 text-2xl"></i>
                            </div>
                            <h2 class="text-xl font-bold text-white">Document Générique</h2>
                        </div>
                        <p class="text-gray-300 mb-4">
                            Créez un document PDF personnalisé avec le style <%= config.nom %>.
                        </p>
                        <a href="/systeme/<%= systeme %>/document-generique" 
                           class="inline-flex items-center px-4 py-2 border border-green-600 text-green-400 rounded-lg font-medium hover:bg-green-600/10 transition-colors">
                            Créer un document
                            <i class="fas fa-plus ml-2"></i>
                        </a>
                    </div>
                </div>

                <!-- Informations sur le système -->
                <% if (config.mechanics || config.attributs) { %>
                <div class="bg-gray-800 rounded-lg p-6 border border-gray-700">
                    <h2 class="text-2xl font-bold text-white mb-6">Mécaniques du système</h2>
                    
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <!-- Résolution de base -->
                        <% if (config.mechanics && config.mechanics.resolution) { %>
                        <div>
                            <h3 class="text-lg font-semibold text-white mb-3">Système de résolution</h3>
                            <div class="space-y-2">
                                <div>
                                    <span class="text-sm font-medium text-gray-400">Type :</span>
                                    <span class="text-gray-300 ml-2"><%= config.mechanics.resolution.type %></span>
                                </div>
                                <% if (config.mechanics.resolution.resultats) { %>
                                <div>
                                    <span class="text-sm font-medium text-gray-400">Seuils :</span>
                                    <div class="mt-1 space-y-1">
                                        <% Object.entries(config.mechanics.resolution.resultats).forEach(([seuil, resultat]) => { %>
                                        <div class="text-sm">
                                            <span class="text-gray-500"><%= seuil %> :</span>
                                            <span class="text-gray-300 ml-2"><%= resultat %></span>
                                        </div>
                                        <% }); %>
                                    </div>
                                </div>
                                <% } %>
                            </div>
                        </div>
                        <% } %>
                        
                        <!-- Attributs -->
                        <% if (config.attributs) { %>
                        <div>
                            <h3 class="text-lg font-semibold text-white mb-3">Attributs</h3>
                            <div class="space-y-2">
                                <% Object.entries(config.attributs).forEach(([code, attr]) => { %>
                                <div class="flex justify-between items-center">
                                    <span class="text-gray-300"><%= attr.nom %></span>
                                    <span class="text-sm text-gray-500">
                                        <%= attr.min %> - <%= attr.max %>
                                    </span>
                                </div>
                                <% }); %>
                            </div>
                        </div>
                        <% } %>
                    </div>
                </div>
                <% } %>
            </div>
        </div>
    </div>
</main>

<script>
document.addEventListener('DOMContentLoaded', function() {
    // Animations et interactions
});
</script>