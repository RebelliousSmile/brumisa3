<%- contentFor('head') %>
<meta name="description" content="<%= description %>">
<meta name="keywords" content="pdf générique, <%= systeme %>, <% if (typeof univers !== 'undefined') { %><%= univers %>, <% } %>document personnalisé">

<%- contentFor('body') %>
<main class="min-h-screen bg-gray-900">
    <div class="relative">
        <!-- Background -->
        <div class="absolute inset-0 bg-gradient-to-br from-gray-900 via-gray-800 to-black"></div>
        
        <!-- Contenu principal -->
        <div class="relative z-10 px-4 py-16">
            <div class="max-w-4xl mx-auto">
                <!-- En-tête -->
                <div class="text-center mb-12">
                    <div class="inline-block mb-4">
                        <% if (typeof configSysteme !== 'undefined') { %>
                        <span class="px-3 py-1 text-sm font-medium text-blue-400 bg-blue-400/10 border border-blue-400/20 rounded-full">
                            <%= configSysteme.nom %>
                        </span>
                        <% } else { %>
                        <span class="px-3 py-1 text-sm font-medium text-blue-400 bg-blue-400/10 border border-blue-400/20 rounded-full">
                            <%= config ? config.nom : systeme %>
                        </span>
                        <% } %>
                        
                        <% if (typeof configUnivers !== 'undefined') { %>
                        <span class="px-3 py-1 text-sm font-medium rounded-full border ml-2"
                              style="color: <%= configUnivers.couleur || '#6B7280' %>; border-color: <%= configUnivers.couleur || '#6B7280' %>20; background-color: <%= configUnivers.couleur || '#6B7280' %>10;">
                            <%= configUnivers.nom %>
                        </span>
                        <% } %>
                    </div>
                    <h1 class="text-4xl md:text-5xl font-bold text-white mb-6">
                        Créer un Document Générique
                    </h1>
                    <p class="text-xl text-gray-300 mb-8 max-w-2xl mx-auto">
                        Générez un PDF personnalisé avec le style visuel et les éléments de votre système de jeu.
                    </p>
                </div>

                <!-- Formulaire de création -->
                <div class="bg-gray-800 rounded-lg border border-gray-700 overflow-hidden">
                    <div class="p-6 border-b border-gray-700">
                        <h2 class="text-2xl font-bold text-white">Configuration du document</h2>
                    </div>
                    
                    <form id="documentForm" class="p-6" x-data="documentGenerique">
                        <!-- Informations de base -->
                        <div class="space-y-6">
                            <div>
                                <label for="titre" class="block text-sm font-medium text-gray-300 mb-2">
                                    Titre du document *
                                </label>
                                <input type="text" id="titre" name="titre" required
                                       class="w-full px-3 py-2 bg-gray-700 border border-gray-600 rounded-lg text-white placeholder-gray-400 focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                                       placeholder="Ex: Feuille d'aventure, Notes de campagne...">
                            </div>
                            
                            <div>
                                <label for="description" class="block text-sm font-medium text-gray-300 mb-2">
                                    Description (optionnel)
                                </label>
                                <textarea id="description" name="description" rows="3"
                                          class="w-full px-3 py-2 bg-gray-700 border border-gray-600 rounded-lg text-white placeholder-gray-400 focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                                          placeholder="Description du contenu ou utilisation prévue..."></textarea>
                            </div>
                        </div>

                        <!-- Options de mise en forme -->
                        <div class="mt-8 pt-6 border-t border-gray-700">
                            <h3 class="text-lg font-semibold text-white mb-4">Options de mise en forme</h3>
                            
                            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                                <div>
                                    <label for="format" class="block text-sm font-medium text-gray-300 mb-2">
                                        Format de page
                                    </label>
                                    <select id="format" name="format" 
                                            class="w-full px-3 py-2 bg-gray-700 border border-gray-600 rounded-lg text-white focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                                        <option value="A4">A4 (210 × 297 mm)</option>
                                        <option value="LETTER">Letter (216 × 279 mm)</option>
                                        <option value="A5">A5 (148 × 210 mm)</option>
                                    </select>
                                </div>
                                
                                <div>
                                    <label for="orientation" class="block text-sm font-medium text-gray-300 mb-2">
                                        Orientation
                                    </label>
                                    <select id="orientation" name="orientation"
                                            class="w-full px-3 py-2 bg-gray-700 border border-gray-600 rounded-lg text-white focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                                        <option value="portrait">Portrait</option>
                                        <option value="landscape">Paysage</option>
                                    </select>
                                </div>
                            </div>

                            <div class="mt-6">
                                <label class="flex items-center">
                                    <input type="checkbox" name="includeHeader" 
                                           class="w-4 h-4 text-blue-600 bg-gray-700 border-gray-600 rounded focus:ring-blue-500">
                                    <span class="ml-2 text-gray-300">Inclure un en-tête avec le titre</span>
                                </label>
                            </div>
                            
                            <div class="mt-3">
                                <label class="flex items-center">
                                    <input type="checkbox" name="includeFooter" 
                                           class="w-4 h-4 text-blue-600 bg-gray-700 border-gray-600 rounded focus:ring-blue-500">
                                    <span class="ml-2 text-gray-300">Inclure un pied de page avec numérotation</span>
                                </label>
                            </div>
                        </div>

                        <!-- Champs personnalisés -->
                        <div class="mt-8 pt-6 border-t border-gray-700">
                            <h3 class="text-lg font-semibold text-white mb-4">Contenu personnalisé</h3>
                            
                            <div>
                                <label for="contenu" class="block text-sm font-medium text-gray-300 mb-2">
                                    Contenu du document
                                </label>
                                <textarea id="contenu" name="contenu" rows="6"
                                          class="w-full px-3 py-2 bg-gray-700 border border-gray-600 rounded-lg text-white placeholder-gray-400 focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                                          placeholder="Saisissez le contenu de votre document...&#10;&#10;Vous pouvez utiliser du texte formaté :&#10;- **Gras**&#10;- *Italique*&#10;- Listes à puces&#10;- Sections avec titres"></textarea>
                            </div>
                        </div>

                        <!-- Boutons d'action -->
                        <div class="flex flex-col sm:flex-row gap-4 mt-8 pt-6 border-t border-gray-700">
                            <button type="submit" 
                                    class="flex-1 px-6 py-3 bg-blue-600 text-white font-medium rounded-lg hover:bg-blue-700 focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 focus:ring-offset-gray-800 transition-colors">
                                <i class="fas fa-file-pdf mr-2"></i>
                                Générer le PDF
                            </button>
                            
                            <button type="button" onclick="window.history.back()" 
                                    class="flex-1 px-6 py-3 bg-gray-700 text-gray-300 font-medium rounded-lg hover:bg-gray-600 focus:ring-2 focus:ring-gray-500 focus:ring-offset-2 focus:ring-offset-gray-800 transition-colors">
                                <i class="fas fa-arrow-left mr-2"></i>
                                Retour
                            </button>
                        </div>

                        <!-- Champs cachés -->
                        <input type="hidden" name="systeme" value="<%= systeme %>">
                        <% if (typeof univers !== 'undefined') { %>
                        <input type="hidden" name="univers" value="<%= univers %>">
                        <% } %>
                    </form>
                </div>
            </div>
        </div>
    </div>
</main>

<script>
document.addEventListener('alpine:init', () => {
    Alpine.data('documentGenerique', () => ({
        loading: false,
        
        async soumettreFormulaire(event) {
            event.preventDefault();
            
            if (this.loading) return;
            this.loading = true;
            
            try {
                const formData = new FormData(event.target);
                const data = Object.fromEntries(formData);
                
                const response = await fetch('/api/pdfs/document-generique-anonyme/<%= systeme %>', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify(data)
                });
                
                const result = await response.json();
                
                if (result.succes) {
                    // Redirection vers la page de téléchargement
                    window.location.href = `/pdfs/${result.donnees.id}`;
                } else {
                    throw new Error(result.message || 'Erreur lors de la génération');
                }
            } catch (error) {
                console.error('Erreur:', error);
                alert('Erreur lors de la génération du PDF : ' + error.message);
            } finally {
                this.loading = false;
            }
        }
    }));
});

// Soumission du formulaire
document.getElementById('documentForm').addEventListener('submit', function(e) {
    Alpine.getContext(this).soumettreFormulaire(e);
});
</script>