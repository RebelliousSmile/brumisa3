<%- include('../layouts/principal', { body: `

<div class="bg-gradient-to-br from-green-900 via-emerald-800 to-teal-900 text-white min-h-screen">
    <!-- Header Success -->
    <div class="relative py-16 px-4">
        <div class="max-w-2xl mx-auto text-center">
            <div class="mb-8">
                <i class="ra ra-gem text-6xl text-green-400 mb-4 block animate-pulse"></i>
                <h1 class="text-4xl font-bold mb-4 font-display">
                    Merci pour votre soutien !
                </h1>
                <p class="text-xl text-green-200 leading-relaxed">
                    Votre don a été traité avec succès et votre compte Premium est maintenant activé
                </p>
            </div>
        </div>
    </div>

    <!-- Contenu principal -->
    <div class="max-w-3xl mx-auto px-4 pb-16">
        
        <!-- Récapitulatif du don -->
        <div class="bg-gray-900/50 backdrop-blur-sm rounded-lg p-8 border border-green-500/20 mb-8">
            <div class="text-center">
                <h2 class="text-2xl font-bold mb-6 flex items-center justify-center">
                    <i class="ra ra-scroll mr-3 text-green-400"></i>
                    Récapitulatif de votre don
                </h2>
                
                <div class="grid md:grid-cols-2 gap-6 mb-6">
                    <div class="bg-green-900/30 rounded-lg p-4">
                        <div class="text-3xl font-bold text-green-400 mb-2">
                            <%= donation.amount %>€
                        </div>
                        <p class="text-green-200 text-sm">Montant du don</p>
                    </div>
                    
                    <div class="bg-green-900/30 rounded-lg p-4">
                        <div class="text-lg font-bold text-green-400 mb-2">
                            <% if (donation.amount >= 10) { %>
                                Premium VIP
                            <% } else { %>
                                Premium
                            <% } %>
                        </div>
                        <p class="text-green-200 text-sm">Statut activé</p>
                    </div>
                </div>
                
                <% if (donation.message) { %>
                <div class="bg-gray-800/50 rounded-lg p-4">
                    <p class="text-green-200 italic">
                        "<%= donation.message %>"
                    </p>
                </div>
                <% } %>
            </div>
        </div>

        <!-- Avantages débloqués -->
        <div class="bg-gray-900/50 backdrop-blur-sm rounded-lg p-8 border border-green-500/20 mb-8">
            <h2 class="text-2xl font-bold mb-6 text-center">
                Vos nouveaux avantages Premium
            </h2>
            
            <div class="grid md:grid-cols-2 gap-6">
                <div class="space-y-4">
                    <h3 class="text-lg font-semibold text-green-400 mb-3">
                        <i class="ra ra-check mr-2"></i>
                        Fonctionnalités débloquées
                    </h3>
                    <ul class="space-y-2 text-green-200">
                        <li class="flex items-center">
                            <i class="ra ra-plus text-green-400 mr-3 text-sm"></i>
                            Fiches de personnages illimitées
                        </li>
                        <li class="flex items-center">
                            <i class="ra ra-plus text-green-400 mr-3 text-sm"></i>
                            Pieds de page personnalisés sur vos PDFs
                        </li>
                        <li class="flex items-center">
                            <i class="ra ra-plus text-green-400 mr-3 text-sm"></i>
                            Accès à tous les systèmes de JDR
                        </li>
                        <li class="flex items-center">
                            <i class="ra ra-plus text-green-400 mr-3 text-sm"></i>
                            Oracles exclusifs pour vos parties
                        </li>
                        <li class="flex items-center">
                            <i class="ra ra-plus text-green-400 mr-3 text-sm"></i>
                            Demandes de fonctionnalités prioritaires
                        </li>
                    </ul>
                </div>
                
                <% if (donation.amount >= 10) { %>
                <div class="space-y-4">
                    <h3 class="text-lg font-semibold text-purple-400 mb-3">
                        <i class="ra ra-crown mr-2"></i>
                        Bonus VIP (don ≥ 10€)
                    </h3>
                    <ul class="space-y-2 text-purple-200">
                        <li class="flex items-center">
                            <i class="ra ra-crown text-purple-400 mr-3 text-sm"></i>
                            Badge VIP sur votre profil
                        </li>
                        <li class="flex items-center">
                            <i class="ra ra-crown text-purple-400 mr-3 text-sm"></i>
                            Accès aux fonctionnalités bêta
                        </li>
                        <li class="flex items-center">
                            <i class="ra ra-crown text-purple-400 mr-3 text-sm"></i>
                            Influence sur la roadmap du site
                        </li>
                        <li class="flex items-center">
                            <i class="ra ra-crown text-purple-400 mr-3 text-sm"></i>
                            Mention dans les crédits du site
                        </li>
                    </ul>
                </div>
                <% } %>
            </div>
        </div>

        <!-- Actions suggérées -->
        <div class="text-center space-y-6">
            <h2 class="text-2xl font-bold mb-6">Et maintenant ?</h2>
            
            <div class="grid md:grid-cols-2 gap-4">
                <a href="/monsterhearts/document-generique" 
                   class="bg-purple-600 hover:bg-purple-700 text-white px-6 py-4 rounded-lg font-semibold transition-colors flex items-center justify-center">
                    <i class="ra ra-scroll-unfurled mr-2"></i>
                    Créer votre premier document Premium
                </a>
                
                <a href="/mes-documents" 
                   class="bg-generique hover:bg-generique text-white px-6 py-4 rounded-lg font-semibold transition-colors flex items-center justify-center">
                    <i class="ra ra-stack mr-2"></i>
                    Voir vos documents
                </a>
            </div>
            
            <div class="mt-8 pt-6 border-t border-gray-700">
                <p class="text-gray-300 mb-4">
                    Une question ? Un problème ? Contactez-nous !
                </p>
                <div class="flex justify-center space-x-4">
                    <a href="mailto:contact@brumisa3.fr" 
                       class="text-green-400 hover:text-green-300 underline">
                        contact@brumisa3.fr
                    </a>
                    <span class="text-gray-500">•</span>
                    <a href="/support" 
                       class="text-green-400 hover:text-green-300 underline">
                        Centre d'aide
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

` }) %>