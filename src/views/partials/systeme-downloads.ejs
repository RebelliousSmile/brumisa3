<!-- Downloads Section -->
<div class="bg-gray-700 py-16 px-4">
    <div class="max-w-7xl mx-auto">
        <div class="text-center mb-12">
            <h2 class="text-3xl font-bold text-white mb-4">Téléchargements</h2>
            <p class="text-gray-300 max-w-3xl mx-auto">
                Découvrez notre collection de ressources gratuites pour <%= nomSysteme %>. Ces PDFs ont été créés par la communauté 
                et partagés comme ressources globales pour enrichir vos parties<%= nomSysteme === 'Engrenages' ? ' épiques' : '' %>.
            </p>
        </div>
        
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
            <% downloads.forEach(function(download) { %>
                <div class="bg-gray-800 p-6 rounded-lg border <%= couleurBordure %> hover:border-<%= couleurHover %> transition-colors">
                    <div class="flex items-start justify-between mb-4">
                        <div>
                            <h3 class="text-lg font-semibold text-white mb-2"><%= download.titre %></h3>
                            <p class="text-gray-400 text-sm mb-3"><%= download.description %></p>
                            <div class="flex items-center text-xs text-gray-500 mb-2">
                                <i class="ra ra-player mr-1"></i>
                                <span>Par <%= download.auteur %></span>
                            </div>
                            <div class="flex items-center text-xs text-gray-500">
                                <i class="ra ra-download mr-1"></i>
                                <span><%= download.telechargements %> téléchargements</span>
                            </div>
                        </div>
                        <div class="text-right">
                            <span class="<%= download.typeBadge %> text-white text-xs px-2 py-1 rounded"><%= download.typeLabel %></span>
                        </div>
                    </div>
                    <div class="flex gap-2">
                        <button class="flex-1 <%= couleurBouton %> text-white py-2 px-3 rounded text-sm font-semibold transition-colors">
                            <i class="ra ra-download mr-1"></i>Télécharger
                        </button>
                        <button class="border <%= couleurBordureSecondaire %> py-2 px-3 rounded text-sm transition-colors">
                            <i class="ra ra-eye mr-1"></i>Aperçu
                        </button>
                    </div>
                </div>
            <% }); %>
        </div>
        
        <!-- Call to submit resources -->
        <div class="mt-12 text-center">
            <div class="bg-gray-800 p-8 rounded-lg border <%= couleurBordure %>">
                <h3 class="text-xl font-bold text-white mb-4">Partagez vos créations</h3>
                <p class="text-gray-300 mb-6">
                    Vous avez créé une ressource intéressante<%= nomSysteme === 'Engrenages' ? ' pour la Roue du Temps' : '' %> ? Partagez-la avec la communauté ! 
                    Les meilleures créations peuvent être promues en ressources globales.
                </p>
                <div class="flex flex-col sm:flex-row gap-4 justify-center">
                    <button class="<%= couleurBouton %> text-white px-6 py-3 rounded-lg font-semibold transition-colors">
                        <i class="ra ra-upload mr-2"></i>Soumettre une ressource
                    </button>
                    <button class="border <%= couleurBordureSecondaire %> px-6 py-3 rounded-lg font-semibold transition-colors">
                        <i class="ra ra-help mr-2"></i>Guide de soumission
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>