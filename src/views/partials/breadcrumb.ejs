<!-- Fil d'Ariane adaptatif -->
<nav class="relative z-10 pt-8 pb-4 px-4">
    <div class="max-w-7xl mx-auto">
        <div class="flex items-center text-sm text-gray-400 space-x-2">
            <a href="/" class="hover:text-purple-400 transition-colors">
                <i class="ra ra-dice-five mr-1"></i>
                Accueil
            </a>
            <i class="fas fa-chevron-right text-gray-600"></i>
            
            <% if (locals.gameSystem) { %>
                <% const systemNames = {
                    'monsterhearts': 'Monsterhearts',
                    'engrenages': 'Engrenages & SortilÃ¨ges', 
                    'metro2033': 'Metro 2033',
                    'mistengine': 'Mist Engine'
                }; %>
                
                <% if (locals.section && locals.section !== 'systeme') { %>
                    <a href="/<%= gameSystem %>" class="hover:text-purple-400 transition-colors">
                        <%= systemNames[gameSystem] || gameSystem %>
                    </a>
                    <i class="fas fa-chevron-right text-gray-600"></i>
                <% } %>
                
                <span class="text-purple-400">
                    <%= locals.pageTitle || locals.titre || 'Page' %>
                </span>
            <% } else if (locals.section === 'oracles') { %>
                <% if (locals.gameSystemName) { %>
                    <a href="/oracles" class="hover:text-purple-400 transition-colors">Oracles</a>
                    <i class="fas fa-chevron-right text-gray-600"></i>
                    <span class="text-purple-400"><%= gameSystemName %></span>
                <% } else { %>
                    <span class="text-purple-400">Oracles</span>
                <% } %>
            <% } else { %>
                <span class="text-purple-400"><%= locals.pageTitle || locals.titre %></span>
            <% } %>
        </div>
    </div>
</nav>