<!-- Hero Section Réutilisable -->
<section class="min-h-screen bg-noir relative overflow-hidden flex items-center">
    <!-- Image de fond (optionnelle) -->
    <% if (locals.heroImage) { %>
    <div class="absolute inset-0 opacity-20">
        <img src="<%= heroImage %>" alt="" class="w-full h-full object-cover">
        <div class="absolute inset-0 bg-gradient-to-t from-noir via-noir/80 to-transparent"></div>
    </div>
    <% } %>
    
    <!-- Contenu -->
    <div class="relative z-10 max-w-4xl mx-auto px-4 py-20 text-center">
        <!-- Badge (optionnel) -->
        <% if (locals.heroBadge) { %>
        <span class="inline-flex items-center px-4 py-1 bg-brand-violet/20 text-brand-violet border border-brand-violet rounded-full text-sm font-medium tracking-wider uppercase mb-6">
            <%= heroBadge %>
        </span>
        <% } %>
        
        <!-- Titre principal -->
        <h1 class="font-display text-h1 text-white mb-6 animate-fade-in-up">
            <%= heroTitle %>
        </h1>
        
        <!-- Sous-titre -->
        <% if (locals.heroSubtitle) { %>
        <p class="font-serif text-xl text-gris-clair mb-8 max-w-2xl mx-auto animate-fade-in-up animation-delay-200">
            <%= heroSubtitle %>
        </p>
        <% } %>
        
        <!-- Boutons CTA -->
        <% if (locals.heroCTA) { %>
        <div class="flex flex-col sm:flex-row gap-4 justify-center animate-fade-in-up animation-delay-400">
            <% heroCTA.forEach(cta => { %>
                <a href="<%= cta.href %>" 
                   class="<%= cta.primary ? 'bg-brand-violet hover:bg-brand-violet-dark border-brand-violet hover:border-brand-violet-dark' : 'bg-transparent hover:bg-white/10 border-gris-fonce hover:border-gris-clair' %> 
                          border-2 text-white px-6 py-3 rounded-lg font-display text-button tracking-button uppercase transition-all duration-standard">
                    <%= cta.text %>
                </a>
            <% }); %>
        </div>
        <% } %>
        
        <!-- Indicateur de défilement -->
        <% if (locals.showScrollIndicator) { %>
        <div class="absolute bottom-8 left-1/2 -translate-x-1/2 animate-bounce">
            <svg class="w-6 h-6 text-gris-clair" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
            </svg>
        </div>
        <% } %>
    </div>
    
    <!-- Image latérale (optionnelle) -->
    <% if (locals.heroSideImage) { %>
    <div class="absolute right-0 top-1/2 -translate-y-1/2 w-1/3 h-3/4 hidden lg:block">
        <img src="<%= heroSideImage %>" alt="" class="w-full h-full object-contain opacity-80 filter contrast-125">
    </div>
    <% } %>
</section>

<style>
@keyframes fade-in-up {
    from {
        opacity: 0;
        transform: translateY(30px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

.animate-fade-in-up {
    animation: fade-in-up 0.8s ease-out forwards;
    opacity: 0;
}

.animation-delay-200 {
    animation-delay: 200ms;
}

.animation-delay-400 {
    animation-delay: 400ms;
}
</style>