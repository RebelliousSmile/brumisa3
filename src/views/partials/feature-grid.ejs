<!-- Grille de fonctionnalités réutilisable -->
<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 md:gap-8">
    <% features.forEach((feature, index) => { %>
    <div class="bg-noir-charbon border border-gris-fonce rounded-xl p-6 text-center hover:border-brand-violet hover:-translate-y-1 transition-all duration-standard group"
         style="animation-delay: <%= index * 100 %>ms">
        
        <!-- Icône -->
        <div class="w-16 h-16 mx-auto mb-6 bg-brand-violet/10 rounded-2xl flex items-center justify-center text-3xl group-hover:bg-brand-violet/20 transition-colors duration-standard">
            <%= feature.icon %>
        </div>
        
        <!-- Titre -->
        <h4 class="font-display text-h5 text-white mb-3">
            <%= feature.title %>
        </h4>
        
        <!-- Description -->
        <p class="font-serif text-body-small text-gris-clair">
            <%= feature.description %>
        </p>
        
        <!-- Badge optionnel -->
        <% if (feature.badge) { %>
        <div class="mt-4">
            <span class="inline-flex items-center px-3 py-1 bg-<%= feature.badgeColor || 'brand-violet' %>/20 text-<%= feature.badgeColor || 'brand-violet' %> border border-<%= feature.badgeColor || 'brand-violet' %> rounded-full text-xs font-medium">
                <%= feature.badge %>
            </span>
        </div>
        <% } %>
        
        <!-- Lien optionnel -->
        <% if (feature.link) { %>
        <div class="mt-4 opacity-0 group-hover:opacity-100 transition-opacity duration-standard">
            <a href="<%= feature.link.href %>" class="text-brand-violet hover:text-brand-violet-dark text-sm font-display uppercase tracking-wider">
                <%= feature.link.text %> →
            </a>
        </div>
        <% } %>
    </div>
    <% }); %>
</div>

<style>
.grid > div {
    animation: fade-in-up 0.6s ease-out forwards;
    opacity: 0;
}
</style>