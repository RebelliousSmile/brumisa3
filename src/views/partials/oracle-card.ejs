<!-- Carte Oracle -->
<div class="bg-gray-800/50 backdrop-blur-sm rounded-xl border border-gray-700 hover:border-gray-600 transition-all duration-300 overflow-hidden hover:scale-105 <%= oracle.game_system || 'generique' %>">
    <!-- En-tÃªte de carte -->
    <div class="p-6 bg-gradient-to-r from-<%= couleurSysteme ? couleurSysteme.primary + '-900/30' : 'purple-900/30' %> to-<%= couleurSysteme ? couleurSysteme.primary + '-800/30' : 'blue-900/30' %>">
        <div class="flex items-start justify-between">
            <h3 class="text-xl font-bold text-white mb-2">
                <%= oracle.name %>
            </h3>
            <div class="flex space-x-2">
                <span class="bg-blue-500/20 text-blue-400 text-xs px-2 py-1 rounded-full border border-blue-500/30">
                    <%= oracle.total_items || 0 %>
                </span>
            </div>
        </div>
        
        <% if (oracle.description) { %>
            <p class="text-gray-300 text-sm line-clamp-2 mb-2">
                <%= oracle.description %>
            </p>
        <% } %>
    </div>

    <!-- Statistiques -->
    <div class="px-6 py-4 bg-gray-900/50">
        <div class="flex justify-between text-sm text-gray-400">
            <span>
                <i class="fas fa-dice mr-1"></i>
                <%= oracle.total_draws || 0 %> tirages
            </span>
            <span>
                <% if (oracle.created_by !== null) { %>
                    <% if (oracle.creator_name && ['ADMIN'].includes(oracle.creator_role)) { %>
                        <span class="text-<%= couleurSysteme ? couleurSysteme.accent : 'purple-400' %>">Brumisater</span>
                    <% } else if (oracle.creator_name && oracle.creator_id) { %>
                        <a href="/profil/<%= oracle.creator_id %>" class="text-<%= couleurSysteme ? couleurSysteme.accent : 'purple-400' %> hover:text-<%= couleurSysteme ? couleurSysteme.accent.replace('400', '300') : 'purple-300' %> transition-colors"><%= oracle.creator_name %></a>
                    <% } %>
                <% } else { %>
                    <span class="text-<%= couleurSysteme ? couleurSysteme.accent : 'purple-400' %>">Brumisater</span>
                <% } %>
            </span>
        </div>
    </div>

    <!-- Actions -->
    <div class="p-4 bg-gray-900/30 flex gap-2">
        <% if (oracle.premium_required && (!utilisateur || (utilisateur.role !== 'PREMIUM' && utilisateur.role !== 'ADMIN'))) { %>
            <button 
                disabled
                class="flex-1 bg-gray-600 text-gray-400 text-center py-2 px-4 rounded-lg cursor-not-allowed">
                <i class="fas fa-lock mr-2"></i>
                Consulter (Premium)
            </button>
        <% } else { %>
            <a href="/oracles/<%= oracle.id %>" 
               class="flex-1 bg-gradient-to-r from-<%= couleurSysteme ? couleurSysteme.primary + '-600' : 'purple-600' %> to-<%= couleurSysteme ? couleurSysteme.primary + '-700' : 'purple-700' %> text-white text-center py-2 px-4 rounded-lg hover:from-<%= couleurSysteme ? couleurSysteme.primary + '-700' : 'purple-700' %> hover:to-<%= couleurSysteme ? couleurSysteme.primary + '-800' : 'purple-800' %> transition-all">
                <i class="ra ra-crystal-ball mr-2"></i>
                Consulter
            </a>
        <% } %>
    </div>
</div>