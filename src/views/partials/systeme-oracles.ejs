<!-- Section Oracles -->
<div class="bg-gray-800 py-16 px-4">
    <div class="max-w-7xl mx-auto">
        <div class="text-center mb-8">
            <h3 class="text-2xl font-bold text-white mb-4">Oracles pour <%= nomSysteme %></h3>
            <p class="text-gray-300 max-w-3xl mx-auto">
                <%= descriptionOracles %>
            </p>
        </div>
        
        <div class="grid md:grid-cols-<%= oracles.length <= 2 ? '2' : '1' %> lg:grid-cols-<%= oracles.length %> gap-6">
            <% oracles.forEach(function(oracle) { %>
                <div class="bg-gray-700 p-4 rounded-lg border <%= couleurBordure %>">
                    <i class="<%= oracle.icone %> text-3xl <%= couleurIcone %> mb-3 block text-center"></i>
                    <h4 class="text-white font-semibold text-center mb-2"><%= oracle.nom %></h4>
                    <p class="text-gray-300 text-sm text-center"><%= oracle.description %></p>
                </div>
            <% }); %>
        </div>
        
        <div class="text-center mt-8">
            <a href="<%= lienOracles %>" class="inline-block <%= couleurBouton %> text-white px-6 py-3 rounded-lg font-semibold transition-colors">
                Acc√©der aux Oracles <%= nomSysteme %>
            </a>
        </div>
    </div>
</div>