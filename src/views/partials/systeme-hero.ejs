<%
// Hero Section Système v2.0
// Usage: include('partials/systeme-hero', { 
//   titre: 'Nom du Système',
//   description: 'Description du système de jeu',
//   icone: 'ra ra-sword',
//   gradient: 'from-purple-900 to-blue-900',
//   couleurIcone: 'text-purple-400',
//   couleurTexte: 'text-gray-300',
//   texteBoutonPrimaire: 'Créer un document',
//   actionBoutonPrimaire: '/systeme/create',
//   texteBoutonSecondaire: 'Voir exemples',
//   actionBoutonSecondaire: '/systeme/examples',
//   theme: 'systeme' // ou 'dark', 'light'
// })

// Paramètres avec valeurs par défaut
const {
    titre = 'Système de Jeu',
    description = 'Créez vos documents pour ce système de jeu de rôle.',
    icone = 'ra ra-sword',
    gradient = 'from-purple-900 to-blue-900',
    couleurIcone = 'text-purple-400',
    couleurTexte = 'text-gray-300',
    texteBoutonPrimaire = 'Créer un document',
    actionBoutonPrimaire = '#',
    texteBoutonSecondaire = 'Voir exemples',
    actionBoutonSecondaire = '#',
    couleurBoutonPrimaire = 'bg-blue-600 hover:bg-blue-700',
    couleurBoutonSecondaire = 'border-gray-400 text-gray-400 hover:bg-gray-400',
    theme = 'systeme'
} = locals;

// Classes de thème pour le fond
const backgroundClasses = `bg-gradient-to-br ${gradient} text-white`;

// Déterminer les variants des boutons
const primaryVariant = theme === 'systeme' ? 'primary' : 'primary';
const secondaryVariant = 'outline';
%>

<!-- Hero Section Système v2.0 -->
<div class="<%= backgroundClasses %>">
    <div class="relative py-24 px-4">
        <div class="max-w-7xl mx-auto text-center">
            <!-- Icône du système -->
            <div class="mb-8">
                <i class="<%= icone %> text-8xl <%= couleurIcone %> mb-6 block"></i>
            </div>
            
            <!-- Titre -->
            <h1 class="text-5xl md:text-7xl font-bold mb-6">
                <%= titre %>
            </h1>
            
            <!-- Description -->
            <p class="text-xl md:text-2xl mb-8 <%= couleurTexte %> max-w-3xl mx-auto">
                <%= description %>
            </p>
            
            <!-- Boutons d'action -->
            <div class="flex flex-col sm:flex-row gap-4 justify-center">
                <% if (texteBoutonPrimaire && actionBoutonPrimaire) { %>
                    <a href="<%= actionBoutonPrimaire %>" class="inline-block px-8 py-4 text-xl font-semibold text-white <%= couleurBoutonPrimaire %> rounded-lg transition-colors">
                        <%= texteBoutonPrimaire %>
                    </a>
                <% } %>
                
                <% if (texteBoutonSecondaire && actionBoutonSecondaire) { %>
                    <a href="<%= actionBoutonSecondaire %>" class="inline-block px-8 py-4 text-xl font-semibold border-2 <%= couleurBoutonSecondaire %> hover:text-gray-900 rounded-lg transition-colors">
                        <%= texteBoutonSecondaire %>
                    </a>
                <% } %>
            </div>
        </div>
    </div>
</div>