<%- contentFor('body') %>

<!-- Page principale - Liste des oracles -->
<div class="min-h-screen bg-gradient-to-br from-stone-50 to-orange-50">
    <!-- Navigation -->
    <header class="bg-white/90 backdrop-blur-md shadow-lg sticky top-0 z-50">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between items-center h-16">
                <div class="flex items-center">
                    <a href="/" class="text-2xl font-bold text-red-800 hover:text-red-700 transition-colors">
                        <i class="ra ra-dice-five mr-2"></i>
                        brumisa3.fr
                    </a>
                </div>
                
                <nav class="hidden md:flex space-x-6">
                    <a href="/" class="text-gray-700 hover:text-red-600 transition-colors">Accueil</a>
                    <a href="/oracles" class="text-red-600 font-semibold">Oracles</a>
                    <% if (utilisateur) { %>
                        <a href="/mes-documents" class="text-gray-700 hover:text-red-600 transition-colors">Mes Documents</a>
                    <% } %>
                </nav>

                <div class="flex items-center space-x-4">
                    <% if (utilisateur) { %>
                        <div class="flex items-center space-x-3">
                            <span class="text-sm text-gray-600">Bonjour, <%= utilisateur.nom %></span>
                            <% if (utilisateur.role === 'PREMIUM') { %>
                                <span class="bg-yellow-100 text-yellow-800 text-xs px-2 py-1 rounded-full">Premium</span>
                            <% } else if (utilisateur.role === 'ADMIN') { %>
                                <span class="bg-purple-100 text-purple-800 text-xs px-2 py-1 rounded-full">Admin</span>
                            <% } %>
                            <a href="/deconnexion" class="text-gray-500 hover:text-gray-700">
                                <i class="fas fa-sign-out-alt"></i>
                            </a>
                        </div>
                    <% } else { %>
                        <a href="/connexion" class="bg-red-600 text-white px-4 py-2 rounded-lg hover:bg-red-700 transition-colors">
                            Connexion
                        </a>
                    <% } %>
                </div>
            </div>
        </div>
    </header>

    <!-- Contenu principal -->
    <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <!-- En-tête de page -->
        <div class="text-center mb-12">
            <h1 class="text-4xl font-bold text-gray-900 mb-4">
                <i class="ra ra-crystal-ball mr-3 text-purple-600"></i>
                Oracles Mystiques
            </h1>
            <p class="text-xl text-gray-600 max-w-3xl mx-auto">
                Découvrez une collection d'oracles pour enrichir vos parties de jeu de rôle. 
                Tirez au sort des éléments pondérés pour créer des histoires uniques.
            </p>
            
            <!-- Info Premium -->
            <% if (!utilisateur || utilisateur.role === 'UTILISATEUR') { %>
                <div class="mt-6 bg-yellow-50 border border-yellow-200 rounded-lg p-4 max-w-2xl mx-auto">
                    <div class="flex items-center justify-center">
                        <i class="fas fa-crown text-yellow-500 mr-2"></i>
                        <span class="text-sm text-yellow-800">
                            Certains oracles nécessitent un compte Premium pour accéder aux fonctionnalités avancées
                        </span>
                    </div>
                </div>
            <% } %>
        </div>

        <!-- Barre de recherche -->
        <div class="mb-8" x-data="{ searchQuery: '', showAdvanced: false }">
            <div class="max-w-2xl mx-auto">
                <div class="relative">
                    <input 
                        type="text" 
                        x-model="searchQuery"
                        @input.debounce.300ms="rechercherOracles($event.target.value)"
                        placeholder="Rechercher un oracle..."
                        class="w-full pl-12 pr-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-red-500 focus:border-transparent shadow-lg"
                    >
                    <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
                        <i class="fas fa-search text-gray-400"></i>
                    </div>
                </div>
            </div>
        </div>

        <!-- Grille des oracles -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8" id="oracles-grid">
            <% oracles.forEach(oracle => { %>
                <div class="bg-white rounded-xl shadow-lg hover:shadow-xl transition-all duration-300 overflow-hidden border border-gray-100">
                    <!-- En-tête de carte -->
                    <div class="p-6 bg-gradient-to-r from-red-50 to-purple-50">
                        <div class="flex items-start justify-between">
                            <h3 class="text-xl font-bold text-gray-900 mb-2">
                                <%= oracle.name %>
                            </h3>
                            <div class="flex space-x-2">
                                <% if (oracle.premium_required) { %>
                                    <span class="bg-yellow-100 text-yellow-800 text-xs px-2 py-1 rounded-full flex items-center">
                                        <i class="fas fa-crown mr-1"></i>
                                        Premium
                                    </span>
                                <% } %>
                                <span class="bg-blue-100 text-blue-800 text-xs px-2 py-1 rounded-full">
                                    <%= oracle.total_items || 0 %> éléments
                                </span>
                            </div>
                        </div>
                        
                        <% if (oracle.description) { %>
                            <p class="text-gray-600 text-sm line-clamp-2">
                                <%= oracle.description %>
                            </p>
                        <% } %>
                    </div>

                    <!-- Statistiques -->
                    <div class="px-6 py-4 bg-gray-50">
                        <div class="flex justify-between text-sm text-gray-500">
                            <span>
                                <i class="fas fa-dice mr-1"></i>
                                <%= oracle.total_draws || 0 %> tirages
                            </span>
                            <span>
                                <i class="fas fa-check-circle mr-1"></i>
                                <%= oracle.active_items || 0 %> actifs
                            </span>
                        </div>
                    </div>

                    <!-- Actions -->
                    <div class="p-6 flex space-x-3">
                        <a href="/oracles/<%= oracle.id %>" 
                           class="flex-1 bg-red-600 text-white text-center py-2 px-4 rounded-lg hover:bg-red-700 transition-colors">
                            <i class="ra ra-crystal-ball mr-2"></i>
                            Consulter
                        </a>
                        
                        <% if (!oracle.premium_required || (utilisateur && (utilisateur.role === 'PREMIUM' || utilisateur.role === 'ADMIN'))) { %>
                            <button 
                                onclick="tirageRapide('<%= oracle.id %>')"
                                class="bg-purple-600 text-white px-4 py-2 rounded-lg hover:bg-purple-700 transition-colors">
                                <i class="fas fa-dice mr-1"></i>
                                Tirer
                            </button>
                        <% } else { %>
                            <button 
                                disabled
                                class="bg-gray-300 text-gray-500 px-4 py-2 rounded-lg cursor-not-allowed">
                                <i class="fas fa-lock mr-1"></i>
                                Premium
                            </button>
                        <% } %>
                    </div>
                </div>
            <% }); %>
        </div>

        <!-- Message si aucun oracle -->
        <% if (oracles.length === 0) { %>
            <div class="text-center py-16">
                <div class="text-6xl text-gray-300 mb-4">
                    <i class="ra ra-crystal-ball"></i>
                </div>
                <h3 class="text-xl font-medium text-gray-600 mb-2">Aucun oracle disponible</h3>
                <p class="text-gray-500">Les oracles seront bientôt ajoutés par nos administrateurs.</p>
            </div>
        <% } %>

        <!-- Pagination -->
        <% if (pagination && pagination.pages > 1) { %>
            <div class="flex justify-center mt-12">
                <nav class="flex space-x-2">
                    <% if (pagination.hasPrev) { %>
                        <a href="/oracles?page=<%= pagination.page - 1 %>" 
                           class="px-4 py-2 bg-white border border-gray-300 rounded-lg hover:bg-gray-50 transition-colors">
                            <i class="fas fa-chevron-left"></i>
                        </a>
                    <% } %>
                    
                    <% for (let i = Math.max(1, pagination.page - 2); i <= Math.min(pagination.pages, pagination.page + 2); i++) { %>
                        <a href="/oracles?page=<%= i %>" 
                           class="px-4 py-2 rounded-lg transition-colors <%= i === pagination.page ? 'bg-red-600 text-white' : 'bg-white border border-gray-300 hover:bg-gray-50' %>">
                            <%= i %>
                        </a>
                    <% } %>
                    
                    <% if (pagination.hasNext) { %>
                        <a href="/oracles?page=<%= pagination.page + 1 %>" 
                           class="px-4 py-2 bg-white border border-gray-300 rounded-lg hover:bg-gray-50 transition-colors">
                            <i class="fas fa-chevron-right"></i>
                        </a>
                    <% } %>
                </nav>
            </div>
        <% } %>
    </main>

    <!-- Modal résultat tirage rapide -->
    <div id="modal-tirage" class="fixed inset-0 bg-black bg-opacity-50 hidden z-50" onclick="fermerModalTirage()">
        <div class="flex items-center justify-center min-h-screen p-4">
            <div class="bg-white rounded-xl shadow-2xl max-w-md w-full p-6" onclick="event.stopPropagation()">
                <div class="text-center">
                    <div class="text-4xl text-purple-600 mb-4">
                        <i class="ra ra-crystal-ball"></i>
                    </div>
                    <h3 class="text-xl font-bold text-gray-900 mb-4">Résultat du Tirage</h3>
                    
                    <div id="resultat-tirage" class="bg-gray-50 rounded-lg p-4 mb-6">
                        <!-- Le résultat sera inséré ici -->
                    </div>
                    
                    <div class="flex space-x-3">
                        <button onclick="fermerModalTirage()" 
                                class="flex-1 bg-gray-200 text-gray-800 py-2 px-4 rounded-lg hover:bg-gray-300 transition-colors">
                            Fermer
                        </button>
                        <button onclick="refaireTirage()" 
                                class="flex-1 bg-purple-600 text-white py-2 px-4 rounded-lg hover:bg-purple-700 transition-colors">
                            <i class="fas fa-redo mr-2"></i>
                            Refaire
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
let currentOracleId = null;

// Tirage rapide depuis la liste
async function tirageRapide(oracleId) {
    try {
        currentOracleId = oracleId;
        
        const response = await fetch(`/api/oracles/${oracleId}/draw`, {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify({
                count: 1,
                withReplacement: true
            })
        });
        
        const data = await response.json();
        
        if (!data.succes) {
            throw new Error(data.message);
        }
        
        const resultat = data.donnees.results[0];
        
        document.getElementById('resultat-tirage').innerHTML = `
            <div class="text-lg font-semibold text-gray-900 mb-2">${resultat.value}</div>
            ${resultat.metadata && Object.keys(resultat.metadata).length > 0 ? 
                `<div class="text-sm text-gray-600">
                    ${Object.entries(resultat.metadata).map(([key, value]) => 
                        `<span class="inline-block bg-gray-200 rounded px-2 py-1 text-xs mr-1 mb-1">${key}: ${value}</span>`
                    ).join('')}
                </div>` : ''
            }
        `;
        
        document.getElementById('modal-tirage').classList.remove('hidden');
        
    } catch (error) {
        alert('Erreur lors du tirage: ' + error.message);
    }
}

// Refaire le même tirage
function refaireTirage() {
    if (currentOracleId) {
        tirageRapide(currentOracleId);
    }
}

// Fermer la modal
function fermerModalTirage() {
    document.getElementById('modal-tirage').classList.add('hidden');
    currentOracleId = null;
}

// Recherche d'oracles
async function rechercherOracles(query) {
    if (query.length < 2) {
        return;
    }
    
    try {
        const response = await fetch(`/api/oracles/search?q=${encodeURIComponent(query)}`);
        const data = await response.json();
        
        if (data.succes) {
            afficherResultatsRecherche(data.donnees);
        }
    } catch (error) {
        console.error('Erreur de recherche:', error);
    }
}

// Afficher les résultats de recherche
function afficherResultatsRecherche(oracles) {
    const grid = document.getElementById('oracles-grid');
    
    if (oracles.length === 0) {
        grid.innerHTML = `
            <div class="col-span-full text-center py-16">
                <div class="text-4xl text-gray-300 mb-4">
                    <i class="fas fa-search"></i>
                </div>
                <h3 class="text-lg font-medium text-gray-600">Aucun oracle trouvé</h3>
                <p class="text-gray-500">Essayez avec d'autres termes de recherche.</p>
            </div>
        `;
        return;
    }
    
    // Regénérer la grille avec les résultats de recherche
    // (Dans un vrai projet, on utiliserait un template engine côté client)
    grid.innerHTML = oracles.map(oracle => `
        <div class="bg-white rounded-xl shadow-lg hover:shadow-xl transition-all duration-300 overflow-hidden border border-gray-100">
            <div class="p-6 bg-gradient-to-r from-red-50 to-purple-50">
                <div class="flex items-start justify-between">
                    <h3 class="text-xl font-bold text-gray-900 mb-2">${oracle.name}</h3>
                    <div class="flex space-x-2">
                        ${oracle.premium_required ? 
                            '<span class="bg-yellow-100 text-yellow-800 text-xs px-2 py-1 rounded-full flex items-center"><i class="fas fa-crown mr-1"></i>Premium</span>' : 
                            ''
                        }
                        <span class="bg-blue-100 text-blue-800 text-xs px-2 py-1 rounded-full">${oracle.total_items || 0} éléments</span>
                    </div>
                </div>
                ${oracle.description ? `<p class="text-gray-600 text-sm line-clamp-2">${oracle.description}</p>` : ''}
            </div>
            <div class="p-6 flex space-x-3">
                <a href="/oracles/${oracle.id}" class="flex-1 bg-red-600 text-white text-center py-2 px-4 rounded-lg hover:bg-red-700 transition-colors">
                    <i class="ra ra-crystal-ball mr-2"></i>Consulter
                </a>
            </div>
        </div>
    `).join('');
}

// Fermer modal avec Escape
document.addEventListener('keydown', function(e) {
    if (e.key === 'Escape') {
        fermerModalTirage();
    }
});
</script>

