<%- contentFor('body') %>

<!-- Page détail d'un oracle -->
<div class="min-h-screen bg-gradient-to-br from-stone-50 to-purple-50">
    <!-- Navigation -->
    <header class="bg-white/90 backdrop-blur-md shadow-lg sticky top-0 z-50">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between items-center h-16">
                <div class="flex items-center space-x-4">
                    <a href="/" class="text-2xl font-bold text-red-800 hover:text-red-700 transition-colors">
                        <i class="ra ra-dice-five mr-2"></i>
                        brumisa3.fr
                    </a>
                    <i class="fas fa-chevron-right text-gray-400"></i>
                    <a href="/oracles" class="text-gray-600 hover:text-red-600 transition-colors">Oracles</a>
                    <i class="fas fa-chevron-right text-gray-400"></i>
                    <span class="text-gray-800"><%= oracle.name %></span>
                </div>
                
                <div class="flex items-center space-x-4">
                    <% if (utilisateur) { %>
                        <div class="flex items-center space-x-3">
                            <span class="text-sm text-gray-600">Bonjour, <%= utilisateur.nom %></span>
                            <% if (utilisateur.role === 'PREMIUM') { %>
                                <span class="bg-yellow-100 text-yellow-800 text-xs px-2 py-1 rounded-full">Premium</span>
                            <% } else if (utilisateur.role === 'ADMIN') { %>
                                <span class="bg-purple-100 text-purple-800 text-xs px-2 py-1 rounded-full">Admin</span>
                                <a href="/admin/oracles/<%= oracle.id %>/edit" 
                                   class="text-blue-600 hover:text-blue-700 text-sm">
                                    <i class="fas fa-edit mr-1"></i>
                                    Éditer
                                </a>
                            <% } %>
                            <a href="/deconnexion" class="text-gray-500 hover:text-gray-700">
                                <i class="fas fa-sign-out-alt"></i>
                            </a>
                        </div>
                    <% } else { %>
                        <a href="/connexion" class="bg-red-600 text-white px-4 py-2 rounded-lg hover:bg-red-700 transition-colors">
                            Connexion
                        </a>
                    <% } %>
                </div>
            </div>
        </div>
    </header>

    <!-- Contenu principal -->
    <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <!-- En-tête de l'oracle -->
        <div class="bg-white rounded-xl shadow-lg p-8 mb-8">
            <div class="flex items-start justify-between mb-6">
                <div class="flex-1">
                    <h1 class="text-3xl font-bold text-gray-900 mb-4">
                        <i class="ra ra-crystal-ball mr-3 text-purple-600"></i>
                        <%= oracle.name %>
                    </h1>
                    
                    <% if (oracle.description) { %>
                        <p class="text-gray-600 text-lg leading-relaxed mb-6">
                            <%= oracle.description %>
                        </p>
                    <% } %>
                </div>
                
                <div class="flex flex-col items-end space-y-2">
                    <% if (oracle.premium_required) { %>
                        <span class="bg-yellow-100 text-yellow-800 text-sm px-3 py-1 rounded-full flex items-center">
                            <i class="fas fa-crown mr-2"></i>
                            Oracle Premium
                        </span>
                    <% } %>
                    
                    <div class="flex space-x-4 text-sm text-gray-500">
                        <span>
                            <i class="fas fa-list mr-1"></i>
                            <%= (oracle.items && oracle.items.length) || 0 %> éléments
                        </span>
                        <span>
                            <i class="fas fa-dice mr-1"></i>
                            <%= stats.total_draws || 0 %> tirages
                        </span>
                    </div>
                </div>
            </div>

            <!-- Interface de tirage -->
            <div class="bg-gradient-to-r from-purple-50 to-red-50 rounded-lg p-6" 
                 x-data="{ count: 1, filters: {}, showFilters: false, loading: false, results: null }">
                
                <h2 class="text-xl font-semibold text-gray-900 mb-4">
                    <i class="fas fa-dice-d20 mr-2"></i>
                    Effectuer un Tirage
                </h2>
                
                <!-- Contrôles de tirage -->
                <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-6">
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">
                            Nombre d'éléments
                        </label>
                        <input type="number" x-model="count" min="1" max="10" 
                               class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500">
                    </div>
                    
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">
                            Mode de tirage
                        </label>
                        <select x-model="withReplacement" 
                                class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500">
                            <option value="true">Avec remise (doublons possibles)</option>
                            <option value="false">Sans remise (éléments uniques)</option>
                        </select>
                    </div>
                    
                    <div class="flex items-end">
                        <% if (!oracle.premium_required || (utilisateur && (utilisateur.role === 'PREMIUM' || utilisateur.role === 'ADMIN'))) { %>
                            <button @click="effectuerTirage()" 
                                    :disabled="loading"
                                    class="w-full bg-purple-600 text-white px-6 py-2 rounded-lg hover:bg-purple-700 transition-colors disabled:opacity-50 disabled:cursor-not-allowed">
                                <span x-show="!loading" class="flex items-center justify-center">
                                    <i class="ra ra-crystal-ball mr-2"></i>
                                    Tirer au Sort
                                </span>
                                <span x-show="loading" class="flex items-center justify-center">
                                    <i class="fas fa-spinner fa-spin mr-2"></i>
                                    Tirage...
                                </span>
                            </button>
                        <% } else { %>
                            <div class="w-full bg-gray-200 text-gray-500 px-6 py-2 rounded-lg text-center">
                                <i class="fas fa-lock mr-2"></i>
                                Nécessite un compte Premium
                            </div>
                        <% } %>
                    </div>
                </div>
                
                <!-- Filtres avancés (Premium/Admin) -->
                <% if (utilisateur && (utilisateur.role === 'PREMIUM' || utilisateur.role === 'ADMIN')) { %>
                    <div class="border-t pt-4">
                        <button @click="showFilters = !showFilters" 
                                class="text-sm text-purple-600 hover:text-purple-700 flex items-center">
                            <i class="fas fa-filter mr-2"></i>
                            Filtres avancés
                            <i class="fas fa-chevron-down ml-2 transition-transform" :class="{ 'rotate-180': showFilters }"></i>
                        </button>
                        
                        <div x-show="showFilters" x-transition class="mt-4 space-y-4">
                            <p class="text-sm text-gray-600">
                                Appliquez des filtres basés sur les métadonnées des éléments pour affiner votre tirage.
                            </p>
                            
                            <!-- Ici, on pourrait ajouter des contrôles de filtres dynamiques -->
                            <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-3">
                                <p class="text-sm text-yellow-800">
                                    <i class="fas fa-info-circle mr-2"></i>
                                    Les filtres sont basés sur les métadonnées disponibles dans cet oracle.
                                </p>
                            </div>
                        </div>
                    </div>
                <% } %>
                
                <!-- Résultats du tirage -->
                <div x-show="results" x-transition class="mt-8">
                    <h3 class="text-lg font-semibold text-gray-900 mb-4">
                        <i class="fas fa-star mr-2 text-yellow-500"></i>
                        Résultats du Tirage
                    </h3>
                    
                    <div class="grid gap-4" id="results-container">
                        <!-- Les résultats seront insérés ici par JavaScript -->
                    </div>
                    
                    <div class="flex justify-center mt-6">
                        <button @click="effectuerTirage()" 
                                class="bg-red-600 text-white px-6 py-2 rounded-lg hover:bg-red-700 transition-colors">
                            <i class="fas fa-redo mr-2"></i>
                            Refaire un Tirage
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Statistiques et informations -->
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8 mb-8">
            <!-- Statistiques générales -->
            <div class="bg-white rounded-xl shadow-lg p-6">
                <h3 class="text-lg font-semibold text-gray-900 mb-4">
                    <i class="fas fa-chart-bar mr-2"></i>
                    Statistiques
                </h3>
                
                <div class="space-y-3">
                    <div class="flex justify-between">
                        <span class="text-gray-600">Éléments totaux</span>
                        <span class="font-semibold"><%= stats.total_items || 0 %></span>
                    </div>
                    <div class="flex justify-between">
                        <span class="text-gray-600">Éléments actifs</span>
                        <span class="font-semibold"><%= stats.active_items || 0 %></span>
                    </div>
                    <div class="flex justify-between">
                        <span class="text-gray-600">Tirages effectués</span>
                        <span class="font-semibold"><%= stats.total_draws || 0 %></span>
                    </div>
                    <% if (utilisateur && utilisateur.role === 'ADMIN') { %>
                        <div class="flex justify-between">
                            <span class="text-gray-600">Utilisateurs uniques</span>
                            <span class="font-semibold"><%= stats.unique_users || 0 %></span>
                        </div>
                    <% } %>
                </div>
            </div>

            <!-- Informations sur l'oracle -->
            <div class="bg-white rounded-xl shadow-lg p-6">
                <h3 class="text-lg font-semibold text-gray-900 mb-4">
                    <i class="fas fa-info-circle mr-2"></i>
                    Informations
                </h3>
                
                <div class="space-y-3 text-sm">
                    <div>
                        <span class="text-gray-600">Statut:</span>
                        <span class="ml-2 px-2 py-1 bg-green-100 text-green-800 rounded-full text-xs">
                            <%= oracle.is_active ? 'Actif' : 'Inactif' %>
                        </span>
                    </div>
                    
                    <% if (oracle.premium_required) { %>
                        <div>
                            <span class="text-gray-600">Accès:</span>
                            <span class="ml-2 px-2 py-1 bg-yellow-100 text-yellow-800 rounded-full text-xs">
                                Premium requis
                            </span>
                        </div>
                    <% } %>
                    
                    <% if (stats.last_draw) { %>
                        <div>
                            <span class="text-gray-600">Dernier tirage:</span>
                            <span class="ml-2 font-medium">
                                <%= new Date(stats.last_draw).toLocaleDateString('fr-FR') %>
                            </span>
                        </div>
                    <% } %>
                </div>
            </div>

            <!-- Actions rapides -->
            <div class="bg-white rounded-xl shadow-lg p-6">
                <h3 class="text-lg font-semibold text-gray-900 mb-4">
                    <i class="fas fa-bolt mr-2"></i>
                    Actions Rapides
                </h3>
                
                <div class="space-y-3">
                    <% if (!oracle.premium_required || (utilisateur && (utilisateur.role === 'PREMIUM' || utilisateur.role === 'ADMIN'))) { %>
                        <button onclick="tirageRapide(1)" 
                                class="w-full bg-purple-100 text-purple-700 px-4 py-2 rounded-lg hover:bg-purple-200 transition-colors text-left">
                            <i class="fas fa-dice-one mr-2"></i>
                            Tirer 1 élément
                        </button>
                        <button onclick="tirageRapide(3)" 
                                class="w-full bg-red-100 text-red-700 px-4 py-2 rounded-lg hover:bg-red-200 transition-colors text-left">
                            <i class="fas fa-dice-three mr-2"></i>
                            Tirer 3 éléments
                        </button>
                        <button onclick="tirageRapide(5)" 
                                class="w-full bg-blue-100 text-blue-700 px-4 py-2 rounded-lg hover:bg-blue-200 transition-colors text-left">
                            <i class="fas fa-dice-five mr-2"></i>
                            Tirer 5 éléments
                        </button>
                    <% } else { %>
                        <div class="text-center text-gray-500 py-8">
                            <i class="fas fa-lock text-3xl mb-2"></i>
                            <p class="text-sm">Abonnement Premium requis pour utiliser cet oracle</p>
                            <a href="/support" class="text-red-600 hover:text-red-700 text-sm font-medium mt-2 inline-block">
                                Découvrir Premium
                            </a>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>

        <!-- Liste des éléments (Premium/Admin) -->
        <% if (oracle.items && oracle.items.length > 0 && utilisateur && (utilisateur.role === 'PREMIUM' || utilisateur.role === 'ADMIN')) { %>
            <div class="bg-white rounded-xl shadow-lg p-8">
                <h3 class="text-xl font-semibold text-gray-900 mb-6">
                    <i class="fas fa-list mr-2"></i>
                    Éléments de l'Oracle
                </h3>
                
                <div class="grid gap-4">
                    <% oracle.items.forEach(item => { %>
                        <div class="bg-gray-50 rounded-lg p-4 flex items-center justify-between">
                            <div class="flex-1">
                                <div class="font-medium text-gray-900 mb-1">
                                    <%= item.value %>
                                </div>
                                
                                <% if (item.metadata && Object.keys(item.metadata).length > 0) { %>
                                    <div class="flex flex-wrap gap-2 mt-2">
                                        <% Object.entries(item.metadata).forEach(([key, value]) => { %>
                                            <span class="bg-gray-200 text-gray-700 text-xs px-2 py-1 rounded">
                                                <%= key %>: <%= value %>
                                            </span>
                                        <% }); %>
                                    </div>
                                <% } %>
                            </div>
                            
                            <div class="ml-4 flex items-center space-x-3">
                                <% if (utilisateur.role === 'ADMIN' && item.weight) { %>
                                    <span class="text-sm text-gray-500 bg-blue-100 px-2 py-1 rounded">
                                        Poids: <%= item.weight %>
                                    </span>
                                <% } %>
                                
                                <span class="w-3 h-3 rounded-full <%= item.is_active ? 'bg-green-500' : 'bg-red-500' %>"></span>
                            </div>
                        </div>
                    <% }); %>
                </div>
            </div>
        <% } %>
    </main>
</div>

<script>
// Fonction pour effectuer un tirage
async function effectuerTirage(count = null, withReplacement = true, filters = null) {
    const tirageData = {
        count: count || parseInt(document.querySelector('[x-model="count"]').value) || 1,
        withReplacement: withReplacement,
        filters: filters
    };
    
    try {
        // Marquer comme en cours de chargement
        const button = document.querySelector('[x-data] button[\\@click="effectuerTirage()"]');
        if (button) {
            button.disabled = true;
        }
        
        const response = await fetch(`/api/oracles/<%= oracle.id %>/draw`, {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify(tirageData)
        });
        
        const data = await response.json();
        
        if (!data.succes) {
            throw new Error(data.message);
        }
        
        // Afficher les résultats
        afficherResultats(data.donnees);
        
    } catch (error) {
        alert('Erreur lors du tirage: ' + error.message);
    } finally {
        // Rétablir le bouton
        const button = document.querySelector('[x-data] button[\\@click="effectuerTirage()"]');
        if (button) {
            button.disabled = false;
        }
    }
}

// Tirage rapide avec nombre prédéfini
async function tirageRapide(count) {
    await effectuerTirage(count, true, null);
}

// Afficher les résultats du tirage
function afficherResultats(data) {
    const container = document.getElementById('results-container');
    
    if (!data.results || data.results.length === 0) {
        container.innerHTML = `
            <div class="text-center py-8 text-gray-500">
                <i class="fas fa-exclamation-triangle text-2xl mb-2"></i>
                <p>Aucun résultat obtenu</p>
            </div>
        `;
        return;
    }
    
    container.innerHTML = data.results.map((result, index) => `
        <div class="bg-gradient-to-r from-purple-50 to-red-50 rounded-lg p-6 border-l-4 border-purple-500">
            <div class="flex items-start justify-between">
                <div class="flex-1">
                    <div class="text-lg font-semibold text-gray-900 mb-2">
                        ${data.results.length > 1 ? `${index + 1}. ` : ''}${result.value}
                    </div>
                    
                    ${result.metadata && Object.keys(result.metadata).length > 0 ? `
                        <div class="flex flex-wrap gap-2 mt-3">
                            ${Object.entries(result.metadata).map(([key, value]) => 
                                `<span class="bg-white/50 text-gray-700 text-sm px-3 py-1 rounded-full">${key}: ${value}</span>`
                            ).join('')}
                        </div>
                    ` : ''}
                </div>
                
                ${result.weight ? `
                    <div class="ml-4 text-right">
                        <span class="text-sm text-gray-500">Poids: ${result.weight}</span>
                    </div>
                ` : ''}
            </div>
        </div>
    `).join('');
    
    // Scroller vers les résultats
    container.scrollIntoView({ behavior: 'smooth', block: 'nearest' });
    
    // Marquer les résultats comme visibles
    const alpineComponent = document.querySelector('[x-data]');
    if (alpineComponent && alpineComponent._x_dataStack) {
        alpineComponent._x_dataStack[0].results = data;
    }
}

// Initialisation Alpine.js pour la page
document.addEventListener('alpine:init', () => {
    Alpine.data('oraclePage', () => ({
        count: 1,
        withReplacement: true,
        filters: {},
        showFilters: false,
        loading: false,
        results: null,
        
        async effectuerTirage() {
            this.loading = true;
            this.results = null;
            
            try {
                const response = await fetch(`/api/oracles/<%= oracle.id %>/draw`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({
                        count: this.count,
                        withReplacement: this.withReplacement,
                        filters: Object.keys(this.filters).length > 0 ? this.filters : null
                    })
                });
                
                const data = await response.json();
                
                if (!data.succes) {
                    throw new Error(data.message);
                }
                
                this.results = data.donnees;
                afficherResultats(data.donnees);
                
            } catch (error) {
                alert('Erreur lors du tirage: ' + error.message);
            } finally {
                this.loading = false;
            }
        }
    }));
});
</script>

