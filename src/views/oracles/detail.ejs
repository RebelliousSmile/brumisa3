<!-- Page détail d'un oracle -->
<div class="min-h-screen bg-gray-900 relative overflow-hidden">
    <!-- Background Effects -->
    <div class="absolute inset-0 bg-gradient-to-br <%= couleurSysteme ? couleurSysteme.gradient : 'from-blue-900 via-blue-800 to-gray-900' %>"></div>
    <div class="absolute inset-0">
        <div class="absolute top-20 left-10 w-72 h-72 bg-gray-800 rounded-full filter blur-3xl"></div>
        <div class="absolute bottom-20 right-10 w-96 h-96 bg-gray-800 rounded-full filter blur-3xl"></div>
    </div>

    <!-- Fil d'Ariane -->
    <nav class="relative z-10 pt-8 pb-4 px-4">
        <div class="max-w-7xl mx-auto">
            <div class="flex items-center text-sm text-gray-400 space-x-2">
                <a href="/" class="hover:text-<%= couleurSysteme ? couleurSysteme.primary : 'blue' %>-400 transition-colors">
                    <i class="ra ra-dice-five mr-1"></i>
                    Accueil
                </a>
                <i class="fas fa-chevron-right text-gray-600"></i>
                <a href="/oracles" class="hover:text-<%= couleurSysteme ? couleurSysteme.primary : 'blue' %>-400 transition-colors">Oracles</a>
                <i class="fas fa-chevron-right text-gray-600"></i>
                <span class="text-<%= couleurSysteme ? couleurSysteme.accent : 'blue-400' %>"><%= oracle.name %></span>
                
                <% if (utilisateur && utilisateur.role === 'ADMIN') { %>
                    <div class="ml-4">
                        <a href="/admin/oracles/<%= oracle.id %>/edit" 
                           class="text-generique hover:text-blue-300 text-sm">
                            <i class="fas fa-edit mr-1"></i>
                            Éditer
                        </a>
                    </div>
                <% } %>
            </div>
        </div>
    </nav>

    <!-- Contenu principal -->
    <main class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <!-- En-tête de l'oracle -->
        <div class="bg-gray-800 backdrop-blur-sm rounded-xl border border-gray-700 p-8 mb-8">
            <div class="flex items-start justify-between mb-6">
                <div class="flex-1">
                    <h1 class="text-3xl font-bold text-white mb-4 font-display">
                        <i class="<%= couleurSysteme ? couleurSysteme.icon : 'ra-crystal-ball' %> ra mr-3 text-<%= couleurSysteme ? couleurSysteme.accent : 'blue-400' %>"></i>
                        <%= oracle.name %>
                    </h1>
                    
                    <% if (oracle.description) { %>
                        <p class="text-gray-300 text-lg leading-relaxed mb-6">
                            <%= oracle.description %>
                        </p>
                    <% } %>
                </div>
                
                <div class="flex flex-col items-end space-y-2">
                    <% if (oracle.premium_required) { %>
                        <span class="bg-yellow-100 text-yellow-800 text-sm px-3 py-1 rounded-full flex items-center">
                            <i class="fas fa-crown mr-2"></i>
                            Oracle Premium
                        </span>
                    <% } %>
                    
                    <div class="flex space-x-4 text-sm text-gray-400">
                        <span>
                            <i class="fas fa-list mr-1"></i>
                            <%= (oracle.items && oracle.items.length) || 0 %> éléments
                        </span>
                        <span>
                            <i class="fas fa-dice mr-1"></i>
                            <%= stats.total_draws || 0 %> consultations
                        </span>
                    </div>
                </div>
            </div>

            <!-- Interface de tirage centrée et immersive -->
            <div class="bg-gradient-to-r from-<%= couleurSysteme ? couleurSysteme.primary : 'blue' %>-50 to-white backdrop-blur-sm rounded-xl p-8 text-center" 
                 x-data="oraclePage()">
                
                <h2 class="text-2xl font-bold text-gray-900 mb-6">
                    <i class="<%= couleurSysteme ? couleurSysteme.icon : 'ra-crystal-ball' %> ra mr-3 text-<%= couleurSysteme ? couleurSysteme.primary : 'blue' %>-600"></i>
                    Révélez le Destin
                </h2>
                
                <!-- Bouton principal de tirage -->
                <div class="mb-8">
                    <% if (!oracle.premium_required || (utilisateur && (utilisateur.role === 'PREMIUM' || utilisateur.role === 'ADMIN'))) { %>
                        <button @click="effectuerTirage()" 
                                :disabled="loading"
                                class="bg-gradient-to-r from-<%= couleurSysteme ? couleurSysteme.primary : 'blue' %>-600 to-<%= couleurSysteme ? couleurSysteme.primary : 'blue' %>-700 text-white px-12 py-4 rounded-xl text-xl font-bold hover:from-<%= couleurSysteme ? couleurSysteme.primary : 'blue' %>-700 hover:to-<%= couleurSysteme ? couleurSysteme.primary : 'blue' %>-800 transition-all transform hover:scale-105 shadow-lg disabled:bg-gray-600 disabled:text-gray-400 disabled:cursor-not-allowed disabled:transform-none">
                            <span x-show="!loading" class="flex items-center justify-center">
                                <i class="<%= couleurSysteme ? couleurSysteme.icon : 'ra-crystal-ball' %> ra mr-3 text-2xl"></i>
                                Révéler le Mystère
                            </span>
                            <span x-show="loading" class="flex items-center justify-center">
                                <i class="fas fa-spinner fa-spin mr-3 text-2xl"></i>
                                Le destin se révèle...
                            </span>
                        </button>
                    <% } else { %>
                        <div class="bg-gray-200 text-gray-600 px-12 py-4 rounded-xl text-xl font-bold">
                            <i class="fas fa-lock mr-3"></i>
                            Nécessite un compte Premium
                        </div>
                    <% } %>
                </div>
                
                <!-- Options avancées (discrètes) -->
                <div class="text-sm">
                    <button @click="showAdvanced = !showAdvanced" 
                            class="text-<%= couleurSysteme ? couleurSysteme.primary : 'blue' %>-600 hover:text-<%= couleurSysteme ? couleurSysteme.primary : 'blue' %>-700 font-medium">
                        <i class="fas fa-cog mr-2"></i>
                        Options avancées
                        <i class="fas fa-chevron-down ml-2 transition-transform" :class="{ 'rotate-180': showAdvanced }"></i>
                    </button>
                    
                    <div x-show="showAdvanced" x-transition class="mt-4 bg-white rounded-lg p-4">
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-2">
                                    Nombre d'éléments
                                </label>
                                <input type="number" x-model="count" min="1" max="10" 
                                       class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-<%= couleurSysteme ? couleurSysteme.primary : 'blue' %>-500">
                            </div>
                            
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-2">
                                    Mode de tirage
                                </label>
                                <select x-model="withReplacement" 
                                        class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-<%= couleurSysteme ? couleurSysteme.primary : 'blue' %>-500">
                                    <option value="true">Avec remise</option>
                                    <option value="false">Sans remise</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
                
                
                <!-- Résultats du tirage avec suspense -->
                <div x-show="results" x-transition class="mt-12">
                    <div class="bg-gradient-to-r from-<%= couleurSysteme ? couleurSysteme.primary : 'blue' %>-100 to-white border-2 border-<%= couleurSysteme ? couleurSysteme.primary : 'blue' %>-200 rounded-xl p-8">
                        <h3 class="text-2xl font-bold text-gray-900 mb-6 text-center">
                            <i class="<%= couleurSysteme ? couleurSysteme.icon : 'ra-crystal-ball' %> ra mr-3 text-<%= couleurSysteme ? couleurSysteme.primary : 'blue' %>-600"></i>
                            Le Destin a Parlé
                        </h3>
                        
                        <div class="space-y-4" id="results-container">
                            <!-- Les résultats seront insérés ici par JavaScript -->
                        </div>
                        
                        <div class="flex justify-center mt-8">
                            <button @click="effectuerTirage()" 
                                    class="bg-gradient-to-r from-<%= couleurSysteme ? couleurSysteme.primary : 'blue' %>-500 to-<%= couleurSysteme ? couleurSysteme.primary : 'blue' %>-600 text-white px-8 py-3 rounded-lg hover:from-<%= couleurSysteme ? couleurSysteme.primary : 'blue' %>-600 hover:to-<%= couleurSysteme ? couleurSysteme.primary : 'blue' %>-700 transition-all font-semibold">
                                <i class="fas fa-redo mr-2"></i>
                                Consulter à Nouveau
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Statistiques et informations -->
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8 mb-8">
            <!-- Statistiques générales -->
            <div class="bg-white rounded-xl shadow-lg p-6">
                <h3 class="text-lg font-semibold text-gray-900 mb-4">
                    <i class="fas fa-chart-bar mr-2"></i>
                    Statistiques
                </h3>
                
                <div class="space-y-3">
                    <div class="flex justify-between">
                        <span class="text-gray-600">Éléments totaux</span>
                        <span class="font-semibold"><%= stats.total_items || 0 %></span>
                    </div>
                    <div class="flex justify-between">
                        <span class="text-gray-600">Éléments actifs</span>
                        <span class="font-semibold"><%= stats.active_items || 0 %></span>
                    </div>
                    <div class="flex justify-between">
                        <span class="text-gray-600">Tirages effectués</span>
                        <span class="font-semibold"><%= stats.total_draws || 0 %></span>
                    </div>
                    <% if (utilisateur && utilisateur.role === 'ADMIN') { %>
                        <div class="flex justify-between">
                            <span class="text-gray-600">Utilisateurs uniques</span>
                            <span class="font-semibold"><%= stats.unique_users || 0 %></span>
                        </div>
                    <% } %>
                </div>
            </div>

            <!-- Informations sur l'oracle -->
            <div class="bg-white rounded-xl shadow-lg p-6">
                <h3 class="text-lg font-semibold text-gray-900 mb-4">
                    <i class="fas fa-info-circle mr-2"></i>
                    Informations
                </h3>
                
                <div class="space-y-3 text-sm">
                    <div>
                        <span class="text-gray-600">Statut:</span>
                        <span class="ml-2 px-2 py-1 bg-green-100 text-green-800 rounded-full text-xs">
                            <%= oracle.is_active ? 'Actif' : 'Inactif' %>
                        </span>
                    </div>
                    
                    <% if (oracle.premium_required) { %>
                        <div>
                            <span class="text-gray-600">Accès:</span>
                            <span class="ml-2 px-2 py-1 bg-yellow-100 text-yellow-800 rounded-full text-xs">
                                Premium requis
                            </span>
                        </div>
                    <% } %>
                    
                    <% if (stats.last_draw) { %>
                        <div>
                            <span class="text-gray-600">Dernier tirage:</span>
                            <span class="ml-2 font-medium">
                                <%= new Date(stats.last_draw).toLocaleDateString('fr-FR') %>
                            </span>
                        </div>
                    <% } %>
                </div>
            </div>

            <!-- Informations sur le système -->
            <div class="bg-gradient-to-r from-<%= couleurSysteme ? couleurSysteme.primary : 'blue' %>-50 to-white rounded-xl shadow-lg p-6 border-l-4 border-<%= couleurSysteme ? couleurSysteme.primary : 'blue' %>-400">
                <h3 class="text-lg font-semibold text-gray-900 mb-4">
                    <i class="<%= couleurSysteme ? couleurSysteme.icon : 'ra-crystal-ball' %> ra mr-2 text-<%= couleurSysteme ? couleurSysteme.primary : 'blue' %>-600"></i>
                    <%= nomSysteme || 'Oracle Générique' %>
                </h3>
                
                <div class="text-sm text-gray-700">
                    <p class="mb-3">Cet oracle fait partie de l'univers <strong><%= nomSysteme || 'Générique' %></strong>.</p>
                    
                    <% if (!oracle.premium_required) { %>
                        <div class="flex items-center text-green-700 bg-green-50 px-3 py-2 rounded-lg">
                            <i class="fas fa-check-circle mr-2"></i>
                            Accès libre pour tous
                        </div>
                    <% } else { %>
                        <div class="flex items-center text-yellow-700 bg-yellow-50 px-3 py-2 rounded-lg">
                            <i class="fas fa-crown mr-2"></i>
                            Nécessite un abonnement Premium
                        </div>
                    <% } %>
                </div>
            </div>
        </div>

        <!-- Liste des éléments (Premium/Admin) -->
        <% if (oracle.items && oracle.items.length > 0 && utilisateur && (utilisateur.role === 'PREMIUM' || utilisateur.role === 'ADMIN')) { %>
            <div class="bg-white rounded-xl shadow-lg p-8">
                <h3 class="text-xl font-semibold text-gray-900 mb-6">
                    <i class="fas fa-list mr-2"></i>
                    Éléments de l'Oracle
                </h3>
                
                <div class="grid gap-4">
                    <% oracle.items.forEach(item => { %>
                        <div class="bg-gray-50 rounded-lg p-4 flex items-center justify-between">
                            <div class="flex-1">
                                <div class="font-medium text-gray-900 mb-1">
                                    <%= item.value %>
                                </div>
                                
                                <% if (item.metadata && Object.keys(item.metadata).length > 0) { %>
                                    <div class="flex flex-wrap gap-2 mt-2">
                                        <% Object.entries(item.metadata).forEach(([key, value]) => { %>
                                            <span class="bg-gray-200 text-gray-700 text-xs px-2 py-1 rounded">
                                                <%= key %>: <%= value %>
                                            </span>
                                        <% }); %>
                                    </div>
                                <% } %>
                            </div>
                            
                            <div class="ml-4 flex items-center space-x-3">
                                <% if (utilisateur.role === 'ADMIN' && item.weight) { %>
                                    <span class="text-sm text-gray-500 bg-blue-100 px-2 py-1 rounded">
                                        Poids: <%= item.weight %>
                                    </span>
                                <% } %>
                                
                                <span class="w-3 h-3 rounded-full <%= item.is_active ? 'bg-green-500' : 'bg-red-500' %>"></span>
                            </div>
                        </div>
                    <% }); %>
                </div>
            </div>
        <% } %>
    </main>
</div>

<script>
// Fonction de tirage rapide pour les boutons externes
async function tirageRapide(count) {
    // Trouver le composant Alpine.js et déclencher son tirage
    const alpineComponent = document.querySelector('[x-data]');
    if (alpineComponent && alpineComponent._x_dataStack) {
        const componentData = alpineComponent._x_dataStack[0];
        componentData.count = count;
        componentData.withReplacement = 'true';
        await componentData.effectuerTirage();
    }
}

// Initialisation des event listeners pour les boutons de tirage rapide
document.addEventListener('DOMContentLoaded', function() {
    document.querySelectorAll('.btn-tirage-rapide').forEach(button => {
        button.addEventListener('click', function() {
            const count = parseInt(this.dataset.count);
            tirageRapide(count);
        });
    });
});

// Afficher les résultats du tirage avec suspense
function afficherResultats(data) {
    const container = document.getElementById('results-container');
    
    if (!data.results || data.results.length === 0) {
        container.innerHTML = `
            <div class="text-center py-12 text-gray-500">
                <i class="fas fa-question-circle text-4xl mb-4 text-gray-400"></i>
                <p class="text-lg">Le mystère reste entier...</p>
                <p class="text-sm mt-2">Aucun résultat n'a émergé des brumes du destin</p>
            </div>
        `;
        return;
    }
    
    // Animation progressive des résultats
    container.innerHTML = '';
    
    data.results.forEach((result, index) => {
        setTimeout(() => {
            const resultDiv = document.createElement('div');
            resultDiv.className = 'transform transition-all duration-500 opacity-0 translate-y-4';
            resultDiv.innerHTML = `
                <div class="bg-gradient-to-r from-white to-gray-50 rounded-xl p-6 border-2 border-gray-200 shadow-md hover:shadow-lg transition-shadow">
                    <div class="text-center">
                        ${data.results.length > 1 ? `
                            <div class="inline-block bg-gray-100 text-gray-600 text-sm px-3 py-1 rounded-full mb-4">
                                Révélation ${index + 1}
                            </div>
                        ` : ''}
                        
                        <div class="text-2xl font-bold text-gray-900 mb-4 leading-relaxed">
                            "${result.value}"
                        </div>
                        
                        ${result.metadata && Object.keys(result.metadata).length > 0 ? `
                            <div class="flex flex-wrap justify-center gap-2 mt-4">
                                ${Object.entries(result.metadata).map(([key, value]) => 
                                    `<span class="bg-blue-100 text-blue-800 text-sm px-3 py-1 rounded-full">${key}: ${value}</span>`
                                ).join('')}
                            </div>
                        ` : ''}
                    </div>
                </div>
            `;
            
            container.appendChild(resultDiv);
            
            // Animation d'apparition
            setTimeout(() => {
                resultDiv.classList.remove('opacity-0', 'translate-y-4');
                resultDiv.classList.add('opacity-100', 'translate-y-0');
            }, 50);
            
        }, index * 300); // Délai progressif entre chaque résultat
    });
    
    // Scroller vers les résultats après toutes les animations
    setTimeout(() => {
        container.scrollIntoView({ behavior: 'smooth', block: 'nearest' });
    }, data.results.length * 300 + 200);
}

// Initialisation Alpine.js pour la page - s'assurer qu'Alpine est chargé
document.addEventListener('alpine:init', () => {
    if (typeof Alpine === 'undefined') {
        console.error('Alpine.js n\'est pas disponible');
        return;
    }
    
    Alpine.data('oraclePage', () => ({
        count: 1,
        withReplacement: 'true', // Comme string pour le select
        filters: {},
        showAdvanced: false,
        loading: false,
        results: null,
        
        async effectuerTirage() {
            this.loading = true;
            this.results = null;
            
            try {
                const response = await fetch(`/api/oracles/<%= oracle.id %>/draw`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({
                        count: parseInt(this.count),
                        withReplacement: this.withReplacement === 'true',
                        filters: Object.keys(this.filters).length > 0 ? this.filters : null
                    })
                });
                
                const data = await response.json();
                
                if (!data.succes) {
                    throw new Error(data.message);
                }
                
                this.results = data.donnees;
                afficherResultats(data.donnees);
                
            } catch (error) {
                alert('Erreur lors du tirage: ' + error.message);
            } finally {
                this.loading = false;
            }
        }
    }));
});

// Fallback au cas où alpine:init ne se déclenche pas
document.addEventListener('DOMContentLoaded', () => {
    // Attendre un peu que Alpine.js se charge
    setTimeout(() => {
        if (typeof Alpine !== 'undefined' && !Alpine.data('oraclePage')) {
            Alpine.data('oraclePage', () => ({
                count: 1,
                withReplacement: 'true',
                filters: {},
                showAdvanced: false,
                loading: false,
                results: null,
                
                async effectuerTirage() {
                    this.loading = true;
                    this.results = null;
                    
                    try {
                        const response = await fetch(`/api/oracles/<%= oracle.id %>/draw`, {
                            method: 'POST',
                            headers: {
                                'Content-Type': 'application/json'
                            },
                            body: JSON.stringify({
                                count: parseInt(this.count),
                                withReplacement: this.withReplacement === 'true',
                                filters: Object.keys(this.filters).length > 0 ? this.filters : null
                            })
                        });
                        
                        const data = await response.json();
                        
                        if (!data.succes) {
                            throw new Error(data.message);
                        }
                        
                        this.results = data.donnees;
                        afficherResultats(data.donnees);
                        
                    } catch (error) {
                        alert('Erreur lors du tirage: ' + error.message);
                    } finally {
                        this.loading = false;
                    }
                }
            }));
        }
    }, 100);
});
</script>

