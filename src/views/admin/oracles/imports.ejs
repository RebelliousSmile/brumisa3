<%- contentFor('body') %>

<!-- Page d'historique des imports d'oracles -->
<div class="min-h-screen bg-gray-50">
    <!-- Navigation admin -->
    <header class="bg-white shadow-sm border-b">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between items-center h-16">
                <div class="flex items-center space-x-4">
                    <a href="/" class="text-xl font-bold text-red-800 hover:text-red-700">
                        <i class="ra ra-dice-five mr-2"></i>
                        brumisater
                    </a>
                    <i class="fas fa-chevron-right text-gray-400"></i>
                    <a href="/admin" class="text-gray-600 hover:text-red-600">Admin</a>
                    <i class="fas fa-chevron-right text-gray-400"></i>
                    <a href="/admin/oracles" class="text-gray-600 hover:text-red-600">Oracles</a>
                    <i class="fas fa-chevron-right text-gray-400"></i>
                    <span class="text-gray-800">Historique Imports</span>
                </div>
                
                <div class="flex items-center space-x-4">
                    <span class="text-sm text-gray-600">Admin: <%= utilisateur.nom %></span>
                    <a href="/deconnexion" class="text-gray-500 hover:text-gray-700">
                        <i class="fas fa-sign-out-alt"></i>
                    </a>
                </div>
            </div>
        </div>
    </header>

    <!-- Contenu principal -->
    <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <!-- En-tête de page -->
        <div class="flex justify-between items-center mb-8">
            <div>
                <h1 class="text-3xl font-bold text-gray-900">
                    <i class="fas fa-history mr-3 text-generique"></i>
                    Historique des Imports
                </h1>
                <p class="text-gray-600 mt-2">
                    Consultez l'historique de tous les imports d'oracles effectués.
                </p>
            </div>
            
            <div class="flex space-x-3">
                <a href="/admin/oracles" 
                   class="bg-gray-600 text-white px-4 py-2 rounded-lg hover:bg-gray-700 transition-colors">
                    <i class="fas fa-arrow-left mr-2"></i>
                    Retour aux oracles
                </a>
            </div>
        </div>

        <!-- Statistiques rapides -->
        <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
            <div class="bg-white rounded-lg shadow p-6">
                <div class="flex items-center">
                    <div class="flex-shrink-0">
                        <i class="fas fa-upload text-2xl text-generique"></i>
                    </div>
                    <div class="ml-4">
                        <p class="text-sm font-medium text-gray-500">Total Imports</p>
                        <p class="text-2xl font-semibold text-gray-900"><%= imports.length %></p>
                    </div>
                </div>
            </div>
            
            <div class="bg-white rounded-lg shadow p-6">
                <div class="flex items-center">
                    <div class="flex-shrink-0">
                        <i class="fas fa-check-circle text-2xl text-green-600"></i>
                    </div>
                    <div class="ml-4">
                        <p class="text-sm font-medium text-gray-500">Réussis</p>
                        <p class="text-2xl font-semibold text-gray-900">
                            <%= imports.filter(imp => imp.import_status === 'SUCCESS').length %>
                        </p>
                    </div>
                </div>
            </div>
            
            <div class="bg-white rounded-lg shadow p-6">
                <div class="flex items-center">
                    <div class="flex-shrink-0">
                        <i class="fas fa-exclamation-triangle text-2xl text-orange-600"></i>
                    </div>
                    <div class="ml-4">
                        <p class="text-sm font-medium text-gray-500">Partiels</p>
                        <p class="text-2xl font-semibold text-gray-900">
                            <%= imports.filter(imp => imp.import_status === 'PARTIAL').length %>
                        </p>
                    </div>
                </div>
            </div>
            
            <div class="bg-white rounded-lg shadow p-6">
                <div class="flex items-center">
                    <div class="flex-shrink-0">
                        <i class="fas fa-times-circle text-2xl text-red-600"></i>
                    </div>
                    <div class="ml-4">
                        <p class="text-sm font-medium text-gray-500">Échecs</p>
                        <p class="text-2xl font-semibold text-gray-900">
                            <%= imports.filter(imp => imp.import_status === 'FAILED').length %>
                        </p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Table des imports -->
        <div class="bg-white rounded-lg shadow overflow-hidden">
            <div class="overflow-x-auto">
                <table class="min-w-full divide-y divide-gray-200">
                    <thead class="bg-gray-50">
                        <tr>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                Fichier
                            </th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                Oracle
                            </th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                Statistiques
                            </th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                Admin
                            </th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                Statut
                            </th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                Date
                            </th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                Actions
                            </th>
                        </tr>
                    </thead>
                    <tbody class="bg-white divide-y divide-gray-200">
                        <% if (imports.length === 0) { %>
                            <tr>
                                <td colspan="7" class="px-6 py-12 text-center text-gray-500">
                                    <i class="fas fa-inbox text-4xl text-gray-300 mb-4"></i>
                                    <p>Aucun import d'oracle trouvé.</p>
                                </td>
                            </tr>
                        <% } else { %>
                            <% imports.forEach(importRecord => { %>
                                <tr class="hover:bg-gray-50">
                                    <td class="px-6 py-4">
                                        <div class="flex items-center">
                                            <div class="flex-shrink-0 h-10 w-10">
                                                <div class="h-10 w-10 rounded-full bg-blue-100 flex items-center justify-center">
                                                    <i class="fas fa-<%= importRecord.import_type === 'JSON' ? 'file-code' : 'file-csv' %> text-generique"></i>
                                                </div>
                                            </div>
                                            <div class="ml-4">
                                                <div class="text-sm font-medium text-gray-900">
                                                    <%= importRecord.filename %>
                                                </div>
                                                <div class="text-sm text-gray-500">
                                                    <%= importRecord.import_type %> · 
                                                    <%= Math.round(importRecord.file_size / 1024) %> KB ·
                                                    <%= importRecord.import_mode %>
                                                </div>
                                            </div>
                                        </div>
                                    </td>
                                    
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <% if (importRecord.oracle_name) { %>
                                            <div class="text-sm font-medium text-gray-900">
                                                <%= importRecord.oracle_name %>
                                            </div>
                                            <div class="text-sm text-gray-500">
                                                ID: <%= importRecord.oracle_id.substring(0, 8) %>...
                                            </div>
                                        <% } else { %>
                                            <span class="text-gray-400 italic">Oracle supprimé</span>
                                        <% } %>
                                    </td>
                                    
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <div class="text-sm text-gray-900">
                                            <div><%= importRecord.items_imported || 0 %> importés</div>
                                            <% if (importRecord.items_failed > 0) { %>
                                                <div class="text-red-600"><%= importRecord.items_failed %> échecs</div>
                                            <% } %>
                                            <% if (importRecord.success_rate !== undefined) { %>
                                                <div class="text-gray-500"><%= importRecord.success_rate %>% réussite</div>
                                            <% } %>
                                        </div>
                                    </td>
                                    
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <div class="text-sm text-gray-900">
                                            <%= importRecord.admin_name || 'Admin supprimé' %>
                                        </div>
                                        <% if (importRecord.processing_duration) { %>
                                            <div class="text-sm text-gray-500">
                                                <%= importRecord.processing_duration %>
                                            </div>
                                        <% } %>
                                    </td>
                                    
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full
                                            <% if (importRecord.import_status === 'SUCCESS') { %>bg-green-100 text-green-800<% } %>
                                            <% if (importRecord.import_status === 'PARTIAL') { %>bg-orange-100 text-orange-800<% } %>
                                            <% if (importRecord.import_status === 'FAILED') { %>bg-red-100 text-red-800<% } %>
                                            <% if (importRecord.import_status === 'CANCELLED') { %>bg-gray-100 text-gray-800<% } %>">
                                            <% if (importRecord.import_status === 'SUCCESS') { %>Réussi<% } %>
                                            <% if (importRecord.import_status === 'PARTIAL') { %>Partiel<% } %>
                                            <% if (importRecord.import_status === 'FAILED') { %>Échec<% } %>
                                            <% if (importRecord.import_status === 'CANCELLED') { %>Annulé<% } %>
                                        </span>
                                    </td>
                                    
                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                                        <%= new Date(importRecord.created_at).toLocaleDateString('fr-FR', {
                                            day: '2-digit',
                                            month: '2-digit', 
                                            year: 'numeric',
                                            hour: '2-digit',
                                            minute: '2-digit'
                                        }) %>
                                    </td>
                                    
                                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                                        <div class="flex space-x-2">
                                            <% if (importRecord.oracle_id && importRecord.oracle_name) { %>
                                                <a href="/oracles/<%= importRecord.oracle_id %>" 
                                                   class="text-generique hover:text-generique"
                                                   title="Voir l'oracle">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                                
                                                <a href="/admin/oracles/<%= importRecord.oracle_id %>/edit" 
                                                   class="text-indigo-600 hover:text-indigo-900"
                                                   title="Éditer">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                            <% } %>
                                            
                                            <% if (importRecord.import_status === 'SUCCESS' || importRecord.import_status === 'PARTIAL') { %>
                                                <% if (importRecord.import_mode === 'CREATE' && importRecord.oracle_id) { %>
                                                    <button onclick="confirmerRollback('<%= importRecord.id %>', '<%= importRecord.filename %>')"
                                                            class="text-red-600 hover:text-red-900"
                                                            title="Annuler l'import (supprime l'oracle)">
                                                        <i class="fas fa-undo"></i>
                                                    </button>
                                                <% } %>
                                            <% } %>
                                        </div>
                                    </td>
                                </tr>
                            <% }); %>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </main>
</div>

<script>
// Confirmation de rollback
function confirmerRollback(importId, filename) {
    if (confirm(`Êtes-vous sûr de vouloir annuler l'import "${filename}" ?\\n\\nCette action supprimera définitivement l'oracle créé et toutes ses données associées.\\n\\nCette action est IRRÉVERSIBLE.`)) {
        effectuerRollback(importId);
    }
}

// Rollback d'import
async function effectuerRollback(importId) {
    try {
        const response = await fetch(`/api/admin/oracles/imports/${importId}/rollback`, {
            method: 'POST'
        });
        
        const result = await response.json();
        
        if (result.succes) {
            alert('Import annulé avec succès');
            location.reload();
        } else {
            alert('Erreur: ' + result.message);
        }
    } catch (error) {
        alert('Erreur lors de l\'annulation: ' + error.message);
    }
}
</script>

