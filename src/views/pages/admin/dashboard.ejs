<%- include('../../layouts/principal', { body: `
<div class="min-h-screen bg-gray-900 py-8" x-data="adminDashboard()">
    <!-- Header -->
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="mb-8">
            <h1 class="text-3xl font-bold text-white mb-2">Dashboard Administrateur</h1>
            <p class="text-gray-400">Vue d'ensemble de l'activité et des métriques produit</p>
        </div>

        <!-- Alerts prioritaires -->
        <div x-show="alerts.length > 0" class="mb-8 space-y-4">
            <template x-for="alert in alerts" :key="alert.id">
                <div class="bg-red-900/50 border border-red-500/30 text-red-200 px-4 py-3 rounded-lg">
                    <div class="flex items-center justify-between">
                        <div class="flex items-center">
                            <i class="fas fa-exclamation-triangle mr-2"></i>
                            <span x-text="alert.message"></span>
                        </div>
                        <button @click="dismissAlert(alert.id)" class="text-red-400 hover:text-red-300">
                            <i class="fas fa-times"></i>
                        </button>
                    </div>
                </div>
            </template>
        </div>

        <!-- Métriques principales -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
            <!-- Documents en attente -->
            <div class="bg-gray-800/50 p-6 rounded-xl border border-gray-700">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-sm text-gray-400">En attente modération</p>
                        <p class="text-3xl font-bold text-yellow-400" x-text="metrics.documents_en_attente"></p>
                    </div>
                    <div class="p-3 bg-yellow-500/20 rounded-lg">
                        <i class="fas fa-clock text-yellow-400 text-xl"></i>
                    </div>
                </div>
                <div class="mt-4">
                    <button @click="navigateToModeration()" 
                            class="text-yellow-400 hover:text-yellow-300 text-sm">
                        Voir la queue →
                    </button>
                </div>
            </div>

            <!-- Utilisateurs actifs -->
            <div class="bg-gray-800/50 p-6 rounded-xl border border-gray-700">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-sm text-gray-400">Utilisateurs actifs</p>
                        <p class="text-3xl font-bold text-blue-400" x-text="metrics.utilisateurs_actifs"></p>
                    </div>
                    <div class="p-3 bg-blue-500/20 rounded-lg">
                        <i class="fas fa-users text-blue-400 text-xl"></i>
                    </div>
                </div>
                <div class="mt-4">
                    <span class="text-green-400 text-sm">+12% ce mois</span>
                </div>
            </div>

            <!-- Documents générés -->
            <div class="bg-gray-800/50 p-6 rounded-xl border border-gray-700">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-sm text-gray-400">PDFs générés</p>
                        <p class="text-3xl font-bold text-green-400" x-text="metrics.pdfs_generes"></p>
                    </div>
                    <div class="p-3 bg-green-500/20 rounded-lg">
                        <i class="fas fa-file-pdf text-green-400 text-xl"></i>
                    </div>
                </div>
                <div class="mt-4">
                    <span class="text-green-400 text-sm">+8% cette semaine</span>
                </div>
            </div>

            <!-- Signalements -->
            <div class="bg-gray-800/50 p-6 rounded-xl border border-gray-700">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-sm text-gray-400">Signalements</p>
                        <p class="text-3xl font-bold text-red-400" x-text="metrics.signalements"></p>
                    </div>
                    <div class="p-3 bg-red-500/20 rounded-lg">
                        <i class="fas fa-flag text-red-400 text-xl"></i>
                    </div>
                </div>
                <div class="mt-4">
                    <button @click="navigateToReports()" 
                            class="text-red-400 hover:text-red-300 text-sm">
                        Examiner →
                    </button>
                </div>
            </div>
        </div>

        <!-- Actions rapides -->
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8 mb-8">
            <!-- Modération -->
            <div class="bg-gray-800/50 p-6 rounded-xl border border-gray-700">
                <h3 class="text-lg font-semibold text-white mb-4">Modération</h3>
                <div class="space-y-3">
                    <%- include('../../components/ui-button', {
                        text: 'Queue de modération',
                        variant: 'primary',
                        size: 'sm',
                        href: '/admin/moderation',
                        icon: 'fas fa-tasks',
                        additionalClasses: 'w-full'
                    }) %>
                    <%- include('../../components/ui-button', {
                        text: 'Statistiques',
                        variant: 'outline',
                        size: 'sm',
                        href: '/admin/moderation/stats',
                        icon: 'fas fa-chart-bar',
                        additionalClasses: 'w-full'
                    }) %>
                </div>
            </div>

            <!-- Gestion utilisateurs -->
            <div class="bg-gray-800/50 p-6 rounded-xl border border-gray-700">
                <h3 class="text-lg font-semibold text-white mb-4">Utilisateurs</h3>
                <div class="space-y-3">
                    <%- include('../../components/ui-button', {
                        text: 'Liste utilisateurs',
                        variant: 'primary',
                        size: 'sm',
                        href: '/admin/utilisateurs',
                        icon: 'fas fa-users-cog',
                        additionalClasses: 'w-full'
                    }) %>
                    <%- include('../../components/ui-button', {
                        text: 'Activité récente',
                        variant: 'outline',
                        size: 'sm',
                        href: '/admin/activite',
                        icon: 'fas fa-history',
                        additionalClasses: 'w-full'
                    }) %>
                </div>
            </div>

            <!-- Système -->
            <div class="bg-gray-800/50 p-6 rounded-xl border border-gray-700">
                <h3 class="text-lg font-semibold text-white mb-4">Système</h3>
                <div class="space-y-3">
                    <%- include('../../components/ui-button', {
                        text: 'Maintenance systèmes',
                        variant: 'primary',
                        size: 'sm',
                        href: '/admin/systemes',
                        icon: 'fas fa-cogs',
                        additionalClasses: 'w-full'
                    }) %>
                    <%- include('../../components/ui-button', {
                        text: 'Logs système',
                        variant: 'outline',
                        size: 'sm',
                        href: '/admin/logs',
                        icon: 'fas fa-file-alt',
                        additionalClasses: 'w-full'
                    }) %>
                </div>
            </div>
        </div>

        <!-- Graphiques et analyses -->
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
            <!-- Activité par système JDR -->
            <div class="bg-gray-800/50 p-6 rounded-xl border border-gray-700">
                <h3 class="text-lg font-semibold text-white mb-4">Activité par Système JDR</h3>
                <div class="space-y-4">
                    <template x-for="system in systemStats" :key="system.code">
                        <div class="flex items-center justify-between">
                            <div class="flex items-center">
                                <div class="w-3 h-3 rounded-full mr-3" 
                                     :class="getSystemColor(system.code)"></div>
                                <span class="text-gray-300" x-text="system.nom"></span>
                            </div>
                            <div class="flex items-center">
                                <span class="text-white font-medium mr-2" x-text="system.documents"></span>
                                <span class="text-sm text-gray-400">docs</span>
                            </div>
                        </div>
                    </template>
                </div>
            </div>

            <!-- Actions récentes -->
            <div class="bg-gray-800/50 p-6 rounded-xl border border-gray-700">
                <h3 class="text-lg font-semibold text-white mb-4">Actions Récentes</h3>
                <div class="space-y-3">
                    <template x-for="action in recentActions" :key="action.id">
                        <div class="flex items-center text-sm">
                            <div class="w-2 h-2 rounded-full bg-blue-400 mr-3"></div>
                            <div class="flex-1">
                                <span class="text-gray-300" x-text="action.message"></span>
                                <span class="text-gray-500 ml-2" x-text="action.time"></span>
                            </div>
                        </div>
                    </template>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
function adminDashboard() {
    return {
        metrics: {
            documents_en_attente: 0,
            utilisateurs_actifs: 0,
            pdfs_generes: 0,
            signalements: 0
        },
        alerts: [],
        systemStats: [],
        recentActions: [],
        
        init() {
            this.loadDashboardData();
        },
        
        async loadDashboardData() {
            try {
                const response = await fetch('/api/admin/statistiques', {
                    credentials: 'include'
                });
                
                if (!response.ok) throw new Error('Erreur chargement dashboard');
                
                const data = await response.json();
                
                if (data.succes) {
                    this.metrics = data.donnees.metriques || this.metrics;
                    this.systemStats = data.donnees.systemes || [];
                    this.recentActions = data.donnees.actions_recentes || [];
                    
                    // Générer des alertes basées sur les métriques
                    this.generateAlerts();
                }
            } catch (error) {
                console.error('Erreur dashboard:', error);
                this.alerts.push({
                    id: Date.now(),
                    message: 'Erreur de chargement des données',
                    type: 'error'
                });
            }
        },
        
        generateAlerts() {
            this.alerts = [];
            
            if (this.metrics.documents_en_attente > 10) {
                this.alerts.push({
                    id: Date.now(),
                    message: \`\${this.metrics.documents_en_attente} documents en attente de modération\`,
                    type: 'warning'
                });
            }
            
            if (this.metrics.signalements > 0) {
                this.alerts.push({
                    id: Date.now() + 1,
                    message: \`\${this.metrics.signalements} signalements à examiner\`,
                    type: 'error'
                });
            }
        },
        
        dismissAlert(id) {
            this.alerts = this.alerts.filter(alert => alert.id !== id);
        },
        
        navigateToModeration() {
            window.location.href = '/admin/moderation';
        },
        
        navigateToReports() {
            window.location.href = '/admin/signalements';
        },
        
        getSystemColor(systemCode) {
            const colors = {
                'monsterhearts': 'bg-purple-500',
                'engrenages': 'bg-emerald-500',
                'metro2033': 'bg-red-500',
                'mistengine': 'bg-pink-500',
                'zombiology': 'bg-yellow-500'
            };
            return colors[systemCode] || 'bg-gray-500';
        }
    }
}
</script>
` }) %>