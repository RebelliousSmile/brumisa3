<%- include('../../layouts/principal', { body: `
<div class="min-h-screen bg-gray-900 py-8" x-data="communityVoting()">
    <!-- Header -->
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="mb-8">
            <h1 class="text-3xl font-bold text-white mb-2">Communauté JDR</h1>
            <p class="text-gray-400">Découvrez et votez pour les meilleurs documents de la communauté</p>
        </div>

        <!-- Sélecteur de système -->
        <div class="mb-6 flex items-center space-x-4">
            <label class="text-gray-300">Système JDR :</label>
            <select x-model="selectedSystem" @change="loadDocuments()" 
                    class="bg-gray-800 border border-gray-600 text-white rounded-lg px-4 py-2">
                <option value="">Tous les systèmes</option>
                <option value="monsterhearts">Monsterhearts</option>
                <option value="engrenages">Engrenages</option>
                <option value="metro2033">Metro 2033</option>
                <option value="mistengine">Mist Engine</option>
                <option value="zombiology">Zombiology</option>
            </select>
            
            <select x-model="selectedType" @change="loadDocuments()" 
                    class="bg-gray-800 border border-gray-600 text-white rounded-lg px-4 py-2">
                <option value="">Tous les types</option>
                <option value="CHARACTER">Personnages</option>
                <option value="TOWN">Villes</option>
                <option value="GROUP">Groupes</option>
                <option value="ORGANIZATION">Organisations</option>
                <option value="DANGER">Dangers</option>
                <option value="GENERIQUE">Génériques</option>
            </select>
            
            <select x-model="sortBy" @change="loadDocuments()" 
                    class="bg-gray-800 border border-gray-600 text-white rounded-lg px-4 py-2">
                <option value="populaires">Plus populaires</option>
                <option value="recents">Plus récents</option>
                <option value="mis-en-avant">Mis en avant</option>
            </select>
        </div>

        <!-- Documents -->
        <div class="grid grid-cols-1 lg:grid-cols-2 xl:grid-cols-3 gap-6">
            <template x-for="document in documents" :key="document.id">
                <div class="bg-gray-800/50 border border-gray-700 rounded-xl overflow-hidden">
                    <!-- Header du document -->
                    <div class="p-6 pb-4">
                        <div class="flex items-center justify-between mb-3">
                            <h3 class="text-lg font-medium text-white truncate" x-text="document.titre"></h3>
                            <div x-show="document.est_mis_en_avant" 
                                 class="px-2 py-1 bg-yellow-500/20 text-yellow-300 text-xs rounded-full">
                                <i class="fas fa-star"></i>
                                En avant
                            </div>
                        </div>
                        
                        <div class="flex items-center space-x-2 mb-4">
                            <span class="px-2 py-1 text-xs rounded-full"
                                  :class="getSystemColor(document.systeme)"
                                  x-text="document.systeme"></span>
                            <span class="px-2 py-1 bg-blue-500/20 text-blue-300 text-xs rounded-full"
                                  x-text="document.type"></span>
                            <span class="text-gray-400 text-sm">
                                par <span x-text="document.auteur_nom || 'Utilisateur anonyme'"></span>
                            </span>
                        </div>

                        <!-- Statistiques de votes -->
                        <div class="mb-4">
                            <div class="flex items-center justify-between text-sm mb-2">
                                <span class="text-gray-400">Qualité générale</span>
                                <div class="flex items-center space-x-1">
                                    <div class="flex" x-show="document.nombre_votes > 0">
                                        <template x-for="star in 5" :key="star">
                                            <i class="fas fa-star text-xs"
                                               :class="star <= Math.round(document.qualite_generale_moyenne) ? 'text-yellow-400' : 'text-gray-600'"></i>
                                        </template>
                                    </div>
                                    <span class="text-gray-300 ml-2" x-text="document.qualite_generale_moyenne || 'N/A'"></span>
                                </div>
                            </div>
                            
                            <div class="flex items-center justify-between text-sm mb-2">
                                <span class="text-gray-400">Utilité pratique</span>
                                <div class="flex items-center space-x-1">
                                    <div class="flex" x-show="document.nombre_votes > 0">
                                        <template x-for="star in 5" :key="star">
                                            <i class="fas fa-star text-xs"
                                               :class="star <= Math.round(document.utilite_pratique_moyenne) ? 'text-yellow-400' : 'text-gray-600'"></i>
                                        </template>
                                    </div>
                                    <span class="text-gray-300 ml-2" x-text="document.utilite_pratique_moyenne || 'N/A'"></span>
                                </div>
                            </div>
                            
                            <div class="flex items-center justify-between text-sm mb-2">
                                <span class="text-gray-400">Respect de la gamme</span>
                                <div class="flex items-center space-x-1">
                                    <div class="flex" x-show="document.nombre_votes > 0">
                                        <template x-for="star in 5" :key="star">
                                            <i class="fas fa-star text-xs"
                                               :class="star <= Math.round(document.respect_gamme_moyenne) ? 'text-yellow-400' : 'text-gray-600'"></i>
                                        </template>
                                    </div>
                                    <span class="text-gray-300 ml-2" x-text="document.respect_gamme_moyenne || 'N/A'"></span>
                                </div>
                            </div>
                            
                            <div class="mt-3 pt-2 border-t border-gray-700">
                                <div class="flex items-center justify-between">
                                    <span class="text-yellow-400 font-medium">
                                        Note globale: <span x-text="document.moyenne_globale || 'N/A'"></span>/5
                                    </span>
                                    <span class="text-gray-400 text-sm">
                                        (<span x-text="document.nombre_votes || 0"></span> votes)
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Actions -->
                    <div class="px-6 pb-6">
                        <div class="flex items-center justify-between">
                            <%- include('../../components/ui-button', {
                                text: 'Voir le PDF',
                                variant: 'outline',
                                size: 'sm',
                                action: 'viewDocument(document.id)',
                                icon: 'fas fa-eye',
                                additionalClasses: 'flex-1 mr-2'
                            }) %>
                            
                            <template x-if="canVote">
                                <button @click="openVoteModal(document)"
                                        class="flex-1 ml-2 px-4 py-2 bg-purple-500/20 text-purple-300 rounded-lg hover:bg-purple-500/30 text-sm">
                                    <i class="fas fa-vote-yea mr-2"></i>
                                    <span x-text="hasVoted(document.id) ? 'Modifier mon vote' : 'Voter'"></span>
                                </button>
                            </template>
                        </div>
                    </div>
                </div>
            </template>
        </div>

        <!-- État vide -->
        <div x-show="documents.length === 0" 
             class="text-center py-12 text-gray-400">
            <i class="fas fa-search text-4xl mb-4"></i>
            <p class="text-lg mb-2">Aucun document trouvé</p>
            <p class="text-sm">Modifiez vos filtres pour découvrir d'autres créations</p>
        </div>

        <!-- Pagination -->
        <div x-show="pagination.pages > 1" 
             class="mt-8 flex items-center justify-between">
            <div class="text-gray-400 text-sm">
                Page <span x-text="pagination.page"></span> sur <span x-text="pagination.pages"></span>
            </div>
            <div class="flex space-x-2">
                <button x-show="pagination.hasPrev" @click="loadPage(pagination.page - 1)"
                        class="px-4 py-2 bg-gray-800 text-gray-300 rounded hover:bg-gray-700">
                    Précédent
                </button>
                <button x-show="pagination.hasNext" @click="loadPage(pagination.page + 1)"
                        class="px-4 py-2 bg-gray-800 text-gray-300 rounded hover:bg-gray-700">
                    Suivant
                </button>
            </div>
        </div>
    </div>
    
    <!-- Modal de vote -->
    <div x-show="showVoteModal" x-transition class="fixed inset-0 bg-black/50 flex items-center justify-center z-50">
        <div class="bg-gray-800 rounded-xl p-6 max-w-md w-full mx-4">
            <div class="flex items-center justify-between mb-4">
                <h3 class="text-lg font-medium text-white">Voter pour ce document</h3>
                <button @click="showVoteModal = false" class="text-gray-400 hover:text-white">
                    <i class="fas fa-times"></i>
                </button>
            </div>
            
            <div x-show="selectedDocument">
                <p class="text-gray-400 mb-6" x-text="selectedDocument?.titre"></p>
                
                <!-- Critères de vote -->
                <div class="space-y-6">
                    <div>
                        <label class="block text-sm font-medium text-gray-300 mb-2">
                            Qualité générale (1-5 étoiles)
                        </label>
                        <div class="flex space-x-2">
                            <template x-for="star in 5" :key="star">
                                <button @click="voteData.qualite_generale = star"
                                        :class="star <= voteData.qualite_generale ? 'text-yellow-400' : 'text-gray-600 hover:text-yellow-300'">
                                    <i class="fas fa-star text-lg"></i>
                                </button>
                            </template>
                        </div>
                    </div>
                    
                    <div>
                        <label class="block text-sm font-medium text-gray-300 mb-2">
                            Utilité pratique (1-5 étoiles)
                        </label>
                        <div class="flex space-x-2">
                            <template x-for="star in 5" :key="star">
                                <button @click="voteData.utilite_pratique = star"
                                        :class="star <= voteData.utilite_pratique ? 'text-yellow-400' : 'text-gray-600 hover:text-yellow-300'">
                                    <i class="fas fa-star text-lg"></i>
                                </button>
                            </template>
                        </div>
                    </div>
                    
                    <div>
                        <label class="block text-sm font-medium text-gray-300 mb-2">
                            Respect de la gamme (1-5 étoiles)
                        </label>
                        <div class="flex space-x-2">
                            <template x-for="star in 5" :key="star">
                                <button @click="voteData.respect_gamme = star"
                                        :class="star <= voteData.respect_gamme ? 'text-yellow-400' : 'text-gray-600 hover:text-yellow-300'">
                                    <i class="fas fa-star text-lg"></i>
                                </button>
                            </template>
                        </div>
                    </div>
                    
                    <div>
                        <label class="block text-sm font-medium text-gray-300 mb-2">
                            Commentaire (optionnel)
                        </label>
                        <textarea x-model="voteData.commentaire" 
                                  class="w-full px-3 py-2 bg-gray-700 border border-gray-600 rounded-lg text-white"
                                  rows="3" placeholder="Partagez votre avis sur ce document..."></textarea>
                    </div>
                </div>
                
                <div class="mt-6 flex space-x-3">
                    <button @click="submitVote()" 
                            class="flex-1 px-4 py-2 bg-purple-600 text-white rounded-lg hover:bg-purple-700"
                            :disabled="!isVoteValid()">
                        Envoyer mon vote
                    </button>
                    <button @click="showVoteModal = false"
                            class="px-4 py-2 bg-gray-600 text-white rounded-lg hover:bg-gray-700">
                        Annuler
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
function communityVoting() {
    return {
        documents: [],
        selectedSystem: '',
        selectedType: '',
        sortBy: 'populaires',
        canVote: <%= locals.utilisateur ? 'true' : 'false' %>,
        userVotes: new Set(),
        showVoteModal: false,
        selectedDocument: null,
        voteData: {
            qualite_generale: 0,
            utilite_pratique: 0,
            respect_gamme: 0,
            commentaire: ''
        },
        pagination: {
            page: 1,
            pages: 1,
            hasNext: false,
            hasPrev: false
        },
        
        init() {
            this.loadDocuments();
            if (this.canVote) {
                this.loadUserVotes();
            }
        },
        
        async loadDocuments() {
            try {
                let endpoint = '';
                if (this.sortBy === 'populaires') {
                    endpoint = '/api/communaute/' + (this.selectedSystem || 'tous') + '/documents-populaires';
                } else if (this.sortBy === 'recents') {
                    endpoint = '/api/communaute/' + (this.selectedSystem || 'tous') + '/documents-recents';
                } else if (this.sortBy === 'mis-en-avant') {
                    endpoint = '/api/communaute/' + (this.selectedSystem || 'tous') + '/documents-mis-en-avant';
                }
                
                const params = new URLSearchParams({
                    page: this.pagination.page
                });
                if (this.selectedType) params.append('type', this.selectedType);
                
                const response = await fetch(endpoint + '?' + params);
                const data = await response.json();
                
                if (data.succes) {
                    this.documents = data.donnees.items || [];
                    this.pagination = data.donnees.pagination || this.pagination;
                }
            } catch (error) {
                console.error('Erreur chargement documents:', error);
            }
        },
        
        async loadUserVotes() {
            try {
                const response = await fetch('/api/votes/mes-votes', {
                    credentials: 'include'
                });
                const data = await response.json();
                
                if (data.succes) {
                    this.userVotes = new Set(data.donnees.map(v => v.document_id));
                }
            } catch (error) {
                console.error('Erreur chargement votes utilisateur:', error);
            }
        },
        
        hasVoted(documentId) {
            return this.userVotes.has(documentId);
        },
        
        openVoteModal(document) {
            this.selectedDocument = document;
            this.resetVoteData();
            
            // Charger le vote existant si présent
            if (this.hasVoted(document.id)) {
                this.loadExistingVote(document.id);
            }
            
            this.showVoteModal = true;
        },
        
        async loadExistingVote(documentId) {
            try {
                const response = await fetch('/api/documents/' + documentId + '/mon-vote', {
                    credentials: 'include'
                });
                const data = await response.json();
                
                if (data.succes && data.donnees) {
                    this.voteData = {
                        qualite_generale: data.donnees.qualite_generale,
                        utilite_pratique: data.donnees.utilite_pratique,
                        respect_gamme: data.donnees.respect_gamme,
                        commentaire: data.donnees.commentaire || ''
                    };
                }
            } catch (error) {
                console.error('Erreur chargement vote existant:', error);
            }
        },
        
        resetVoteData() {
            this.voteData = {
                qualite_generale: 0,
                utilite_pratique: 0,
                respect_gamme: 0,
                commentaire: ''
            };
        },
        
        isVoteValid() {
            return this.voteData.qualite_generale > 0 && 
                   this.voteData.utilite_pratique > 0 && 
                   this.voteData.respect_gamme > 0;
        },
        
        async submitVote() {
            if (!this.isVoteValid()) return;
            
            try {
                const response = await fetch('/api/documents/' + this.selectedDocument.id + '/vote', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    credentials: 'include',
                    body: JSON.stringify(this.voteData)
                });
                
                const data = await response.json();
                
                if (data.succes) {
                    this.userVotes.add(this.selectedDocument.id);
                    this.showVoteModal = false;
                    this.loadDocuments(); // Recharger pour avoir les nouvelles stats
                } else {
                    alert('Erreur lors du vote: ' + data.message);
                }
            } catch (error) {
                console.error('Erreur envoi vote:', error);
                alert('Erreur lors de l\\'envoi du vote');
            }
        },
        
        viewDocument(documentId) {
            window.open('/api/pdfs/' + documentId + '/telecharger', '_blank');
        },
        
        loadPage(page) {
            this.pagination.page = page;
            this.loadDocuments();
        },
        
        getSystemColor(system) {
            const colors = {
                'monsterhearts': 'bg-purple-500/20 text-purple-300',
                'engrenages': 'bg-emerald-500/20 text-emerald-300',
                'metro2033': 'bg-red-500/20 text-red-300',
                'mistengine': 'bg-pink-500/20 text-pink-300',
                'zombiology': 'bg-yellow-500/20 text-yellow-300'
            };
            return colors[system] || 'bg-gray-500/20 text-gray-300';
        }
    }
}
</script>
` }) %>