<!-- Page d'inscription -->
<div class="min-h-screen bg-noir text-white">
    <div class="flex items-center justify-center px-4 py-12">
        <div class="max-w-md w-full space-y-8">
            <div class="text-center">
                <i class="ra ra-player-king text-generique text-6xl mb-4 block"></i>
                <h2 class="text-3xl font-bold text-white font-display">Inscription</h2>
                <p class="mt-2 text-gris-clair">Créez votre compte pour commencer à créer vos personnages</p>
            </div>
            
            <form class="mt-8 space-y-6" x-data="window.AlpineComponents.InscriptionComponent()" @submit.prevent="inscription()">
                <div class="space-y-4">
                    <div>
                        <label for="nom" class="block text-sm font-medium text-gris-clair">Nom d'utilisateur</label>
                        <input x-model="formulaire.nom" type="text" id="nom" required
                               class="mt-1 block w-full px-3 py-2 bg-noir-charbon border border-gris-fonce rounded-md text-white placeholder-gris-clair focus:outline-none focus:ring-2 focus:ring-generique focus:border-generique"
                               placeholder="Votre nom d'utilisateur"
                               minlength="2" maxlength="50">
                    </div>
                    
                    <div>
                        <label for="email" class="block text-sm font-medium text-gris-clair">Email</label>
                        <input x-model="formulaire.email" type="email" id="email" required
                               class="mt-1 block w-full px-3 py-2 bg-noir-charbon border border-gris-fonce rounded-md text-white placeholder-gris-clair focus:outline-none focus:ring-2 focus:ring-generique focus:border-generique"
                               placeholder="votre@email.com">
                    </div>
                    
                    <div>
                        <label for="motDePasse" class="block text-sm font-medium text-gris-clair">Mot de passe</label>
                        <input x-model="formulaire.motDePasse" type="password" id="motDePasse" required
                               class="mt-1 block w-full px-3 py-2 bg-noir-charbon border border-gris-fonce rounded-md text-white placeholder-gris-clair focus:outline-none focus:ring-2 focus:ring-generique focus:border-generique"
                               placeholder="Mot de passe (min. 8 caractères)"
                               minlength="8">
                        <p class="mt-1 text-xs text-gris-clair">Minimum 8 caractères</p>
                    </div>
                    
                    <div>
                        <label for="confirmationMotDePasse" class="block text-sm font-medium text-gris-clair">Confirmer le mot de passe</label>
                        <input x-model="formulaire.confirmationMotDePasse" type="password" id="confirmationMotDePasse" required
                               class="mt-1 block w-full px-3 py-2 bg-noir-charbon border border-gris-fonce rounded-md text-white placeholder-gris-clair focus:outline-none focus:ring-2 focus:ring-generique focus:border-generique"
                               placeholder="Confirmer le mot de passe"
                               minlength="8">
                    </div>
                </div>
                
                <div class="flex items-center">
                    <input x-model="formulaire.accepteCGU" id="accepteCGU" type="checkbox" required
                           class="h-4 w-4 text-generique focus:ring-generique border-gris-fonce rounded bg-noir-charbon">
                    <label for="accepteCGU" class="ml-2 block text-sm text-gris-clair">
                        J'accepte les <a href="/cgu" target="_blank" class="text-generique hover:text-generique">conditions générales d'utilisation</a>
                        et la <a href="/confidentialite" target="_blank" class="text-generique hover:text-generique">politique de confidentialité</a>
                    </label>
                </div>
                
                <!-- Affichage des erreurs -->
                <div x-show="erreurs.length > 0" class="bg-red-900 border border-red-500 rounded-md p-3">
                    <div class="flex">
                        <div class="flex-shrink-0">
                            <i class="ra ra-skull text-red-400"></i>
                        </div>
                        <div class="ml-3">
                            <h3 class="text-sm font-medium text-red-400">Erreurs de validation :</h3>
                            <div class="mt-2 text-sm text-red-300">
                                <ul class="list-disc list-inside space-y-1">
                                    <template x-for="erreur in erreurs" :key="erreur">
                                        <li x-text="erreur"></li>
                                    </template>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
                
                <!-- Message de succès -->
                <div x-show="succes" class="bg-green-900 border border-green-500 rounded-md p-3">
                    <div class="flex">
                        <div class="flex-shrink-0">
                            <i class="ra ra-player-king text-green-400"></i>
                        </div>
                        <div class="ml-3">
                            <p class="text-sm text-green-300" x-text="messageSucces"></p>
                        </div>
                    </div>
                </div>
                
                <div>
                    <button type="submit" :disabled="enTraitement || !formulaire.accepteCGU"
                            class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-generique hover:bg-generique focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-generique focus:ring-offset-noir disabled:bg-gray-600 disabled:text-gray-400 disabled:cursor-not-allowed transition-colors">
                        <span x-show="!enTraitement">Créer mon compte</span>
                        <span x-show="enTraitement" class="flex items-center">
                            <svg class="animate-spin -ml-1 mr-3 h-5 w-5 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                                <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                                <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                            </svg>
                            Création...
                        </span>
                    </button>
                </div>
                
                <div class="text-center">
                    <p class="text-sm text-gris-clair">
                        Déjà un compte ?
                        <a href="/connexion" class="font-medium text-generique hover:text-generique">
                            Se connecter
                        </a>
                    </p>
                </div>
            </form>
        </div>
    </div>
</div>