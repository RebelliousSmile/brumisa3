<div class="max-w-4xl mx-auto px-4 py-8">
    <h1 class="text-3xl font-bold text-white mb-8 font-display">Paramètres du compte</h1>
    
    <div class="bg-gray-800 rounded-lg p-6 mb-6">
        <h2 class="text-xl font-semibold text-white mb-4">Informations personnelles</h2>
        
        <div class="space-y-4">
            <div>
                <label class="block text-sm font-medium text-gray-300 mb-1">Nom</label>
                <p class="text-white"><%= locals.utilisateur?.nom || 'Non défini' %></p>
            </div>
            
            <div>
                <label class="block text-sm font-medium text-gray-300 mb-1">Email</label>
                <p class="text-white"><%= locals.utilisateur?.email || 'Non défini' %></p>
            </div>
            
            <div>
                <label class="block text-sm font-medium text-gray-300 mb-1">Rôle</label>
                <p class="text-white"><%= locals.utilisateur?.role || 'UTILISATEUR' %></p>
            </div>
            
            <div>
                <label class="block text-sm font-medium text-gray-300 mb-1">Membre depuis</label>
                <p class="text-white"><%= locals.utilisateur?.dateCreation ? new Date(locals.utilisateur.dateCreation).toLocaleDateString('fr-FR') : 'Non défini' %></p>
            </div>
        </div>
    </div>
    
    <div class="bg-gray-800 rounded-lg p-6">
        <h2 class="text-xl font-semibold text-white mb-4">Avatar</h2>
        
        <div class="flex items-center space-x-4">
            <div class="w-20 h-20 bg-purple-600/20 rounded-full flex items-center justify-center border border-purple-500/30">
                <% if (locals.utilisateur?.image) { %>
                    <img src="<%= locals.utilisateur.image %>" alt="Avatar" class="w-full h-full rounded-full object-cover">
                <% } else { %>
                    <svg class="w-12 h-12 text-purple-400" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd" />
                    </svg>
                <% } %>
            </div>
            
            <div>
                <p class="text-sm text-gray-400 mb-2">Aucun avatar personnalisé défini</p>
                <button class="px-4 py-2 bg-purple-600 text-white rounded hover:bg-purple-700 transition-colors text-sm">
                    Changer l'avatar
                </button>
            </div>
        </div>
    </div>
</div>