<%- contentFor('body') %>
<script>
// Initialiser les données depuis le contrôleur
window.initialPersonnages = <%-JSON.stringify(personnages)%>;
window.initialPdfs = <%-JSON.stringify(pdfs)%>;
</script>
<div class="min-h-screen bg-black text-white" x-data="mesDocuments()">
    <!-- En-tête de page -->
    <div class="bg-gray-900 border-b border-gray-800">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
            <div class="flex items-center justify-between">
                <div>
                    <h1 class="text-2xl font-bold font-display text-white">Mes Documents</h1>
                    <p class="mt-1 text-sm text-gray-400">Gérez vos personnages et PDFs</p>
                </div>
                <div class="flex space-x-3">
                    <!-- Menu de création -->
                    <div class="relative" x-data="{ ouvert: false }">
                        <button @click="ouvert = !ouvert" 
                                class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium font-display rounded-md text-white bg-generique hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-generique focus:ring-offset-gray-900">
                            <svg class="-ml-1 mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
                            </svg>
                            Créer nouveau
                            <svg class="ml-2 -mr-1 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
                            </svg>
                        </button>
                        
                        <div x-show="ouvert" @click.away="ouvert = false" x-transition
                             class="absolute right-0 mt-2 w-64 bg-gray-800 border border-gray-700 rounded-lg shadow-lg z-50">
                            <div class="py-2">
                                <!-- Section Personnages -->
                                <div class="px-4 py-2 text-xs font-semibold text-gray-400 uppercase tracking-wider border-b border-gray-700">
                                    Personnages
                                </div>
                                <a href="/personnages/nouveau" 
                                   class="block px-4 py-3 text-sm text-gray-300 hover:bg-gray-700 hover:text-white flex items-center">
                                    <svg class="mr-3 h-5 w-5 text-generique" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                                    </svg>
                                    <div>
                                        <div class="font-medium">Nouveau personnage</div>
                                        <div class="text-xs text-gray-400">Créer une fiche personnage</div>
                                    </div>
                                </a>
                                
                                <!-- Section Documents par système -->
                                <div class="px-4 py-2 text-xs font-semibold text-gray-400 uppercase tracking-wider border-b border-gray-700 mt-2">
                                    Documents génériques
                                </div>
                                <a href="/monsterhearts/document-generique" 
                                   class="block px-4 py-3 text-sm text-gray-300 hover:bg-gray-700 hover:text-white flex items-center">
                                    <svg class="mr-3 h-5 w-5 text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                                    </svg>
                                    <div>
                                        <div class="font-medium">Document Monsterhearts</div>
                                        <div class="text-xs text-gray-400">Guide, règle, aide de jeu</div>
                                    </div>
                                </a>
                                <a href="/engrenages/document-generique" 
                                   class="block px-4 py-3 text-sm text-gray-300 hover:bg-gray-700 hover:text-white flex items-center">
                                    <svg class="mr-3 h-5 w-5 text-emerald-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                                    </svg>
                                    <div>
                                        <div class="font-medium">Document Engrenages</div>
                                        <div class="text-xs text-gray-400">Guide, règle, aide de jeu</div>
                                    </div>
                                </a>
                                
                                <!-- Section Génération PDF -->
                                <div class="px-4 py-2 text-xs font-semibold text-gray-400 uppercase tracking-wider border-b border-gray-700 mt-2">
                                    Génération PDF
                                </div>
                                <a href="/pdf/generer" 
                                   class="block px-4 py-3 text-sm text-gray-300 hover:bg-gray-700 hover:text-white flex items-center">
                                    <svg class="mr-3 h-5 w-5 text-orange-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                                    </svg>
                                    <div>
                                        <div class="font-medium">Générer PDF</div>
                                        <div class="text-xs text-gray-400">À partir d'un personnage existant</div>
                                    </div>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Contenu principal -->
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <!-- Onglets -->
        <div class="border-b border-gray-700 mb-6">
            <nav class="-mb-px flex space-x-8">
                <button @click="ongletActif = 'personnages'"
                        :class="ongletActif === 'personnages' ? 'border-generique text-generique' : 'border-transparent text-gray-400 hover:text-gray-300 hover:border-gray-600'"
                        class="whitespace-nowrap py-2 px-1 border-b-2 font-medium font-display text-sm">
                    Personnages
                    <span class="ml-2 bg-gray-800 text-gray-300 hidden sm:inline-block py-0.5 px-2.5 rounded-full text-xs font-medium" x-text="personnages.length"></span>
                </button>
                <button @click="ongletActif = 'pdfs'"
                        :class="ongletActif === 'pdfs' ? 'border-generique text-generique' : 'border-transparent text-gray-400 hover:text-gray-300 hover:border-gray-600'"
                        class="whitespace-nowrap py-2 px-1 border-b-2 font-medium font-display text-sm">
                    PDFs
                    <span class="ml-2 bg-gray-800 text-gray-300 hidden sm:inline-block py-0.5 px-2.5 rounded-full text-xs font-medium" x-text="pdfs.length"></span>
                </button>
            </nav>
        </div>

        <!-- Filtres -->
        <div class="mb-6" x-show="systemesUtilises.length > 0">
            <div class="flex flex-wrap gap-2">
                <button @click="filtreSysteme = ''; appliquerFiltres()"
                        :class="filtreSysteme === '' ? 'bg-generique text-white' : 'bg-gray-800 text-gray-300 hover:bg-gray-700'"
                        class="px-3 py-1 rounded-full text-sm font-medium font-display border border-gray-600">
                    Tous
                </button>
                <template x-for="systeme in systemesUtilises" :key="systeme">
                    <button @click="filtreSysteme = systeme; appliquerFiltres()"
                            :class="filtreSysteme === systeme ? 'bg-generique text-white' : 'bg-gray-800 text-gray-300 hover:bg-gray-700'"
                            class="px-3 py-1 rounded-full text-sm font-medium font-display border border-gray-600"
                            x-text="systeme">
                    </button>
                </template>
            </div>
        </div>

        <!-- Message si pas de résultats avec filtres -->
        <div x-show="!chargement && systemesUtilises.length > 0 && filtreSysteme !== '' && 
                     ((ongletActif === 'personnages' && personnagesFiltres.length === 0) || 
                      (ongletActif === 'pdfs' && pdfsFiltres.length === 0))" 
             class="text-center py-8">
            <div class="bg-gray-900 border border-gray-700 rounded-lg p-6">
                <svg class="mx-auto h-8 w-8 text-gray-500 mb-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
                </svg>
                <h3 class="text-sm font-medium font-display text-gray-400">Aucun résultat</h3>
                <p class="mt-1 text-xs text-gray-500">
                    Aucun <span x-text="ongletActif === 'personnages' ? 'personnage' : 'PDF'"></span> trouvé pour le système "<span x-text="filtreSysteme"></span>"
                </p>
                <button @click="filtreSysteme = ''; appliquerFiltres()" 
                        class="mt-3 text-xs text-generique hover:text-blue-300">
                    Voir tous les résultats
                </button>
            </div>
        </div>

        <!-- Chargement -->
        <div x-show="chargement" class="text-center py-12">
            <div class="inline-block animate-spin rounded-full h-8 w-8 border-b-2 border-generique"></div>
            <p class="mt-2 text-gray-400">Chargement...</p>
        </div>

        <!-- Tab Content: Personnages -->
        <div x-show="ongletActif === 'personnages' && !chargement">
            <!-- Message si pas de personnages -->
            <div x-show="personnagesFiltres.length === 0" class="text-center py-12">
                <svg class="mx-auto h-12 w-12 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                </svg>
                <h3 class="mt-2 text-sm font-medium font-display text-white">Aucun personnage</h3>
                <p class="mt-1 text-sm text-gray-400">Commencez par créer votre premier personnage.</p>
                <div class="mt-6">
                    <a href="/personnages/nouveau" 
                       class="inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium font-display rounded-md text-white bg-generique hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-generique focus:ring-offset-black">
                        <svg class="-ml-1 mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
                        </svg>
                        Nouveau personnage
                    </a>
                </div>
            </div>

            <!-- Liste des personnages -->
            <div x-show="personnagesFiltres.length > 0" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                <template x-for="personnage in personnagesFiltres" :key="personnage.id">
                    <div class="bg-gray-900 border border-gray-700 rounded-lg hover:border-generique hover:shadow-lg hover:shadow-generique/20 transition-all duration-200">
                        <div class="p-6">
                            <div class="flex items-center justify-between mb-4">
                                <div class="flex-1">
                                    <h3 class="text-lg font-medium font-display text-white" x-text="personnage.nom"></h3>
                                    <p class="text-sm text-gray-400" x-text="personnage.systeme_jeu"></p>
                                </div>
                                <div class="relative" x-data="{ ouvert: false }">
                                    <button @click="ouvert = !ouvert" 
                                            class="text-gray-400 hover:text-gray-300 focus:outline-none">
                                        <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 20 20">
                                            <path d="M10 6a2 2 0 110-4 2 2 0 010 4zM10 12a2 2 0 110-4 2 2 0 010 4zM10 18a2 2 0 110-4 2 2 0 010 4z"/>
                                        </svg>
                                    </button>
                                    <div x-show="ouvert" @click.away="ouvert = false"
                                         class="absolute right-0 mt-2 w-48 bg-gray-800 border border-gray-700 rounded-md shadow-lg z-10">
                                        <div class="py-1">
                                            <a :href="'/personnages/' + personnage.id" 
                                               class="block px-4 py-2 text-sm text-gray-300 hover:bg-gray-700 hover:text-white">
                                                Voir la fiche
                                            </a>
                                            <a :href="'/personnages/' + personnage.id + '/editer'" 
                                               class="block px-4 py-2 text-sm text-gray-300 hover:bg-gray-700 hover:text-white">
                                                Modifier
                                            </a>
                                            <a :href="'/pdf/generer?personnage=' + personnage.id" 
                                               class="block px-4 py-2 text-sm text-generique hover:bg-blue-900/20 hover:text-blue-300">
                                                Générer PDF
                                            </a>
                                            <button @click="dupliquerPersonnage(personnage.id)" 
                                                    class="block w-full text-left px-4 py-2 text-sm text-gray-300 hover:bg-gray-700 hover:text-white">
                                                Dupliquer
                                            </button>
                                            <button @click="supprimerPersonnage(personnage.id)" 
                                                    class="block w-full text-left px-4 py-2 text-sm text-red-400 hover:bg-red-900/20 hover:text-red-300">
                                                Supprimer
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="flex items-center justify-between text-sm text-gray-500">
                                <span x-text="'Créé le ' + new Date(personnage.date_creation).toLocaleDateString('fr-FR')"></span>
                                <span x-text="'Modifié le ' + new Date(personnage.date_modification).toLocaleDateString('fr-FR')"></span>
                            </div>
                        </div>
                    </div>
                </template>
            </div>
        </div>

        <!-- Tab Content: PDFs -->
        <div x-show="ongletActif === 'pdfs' && !chargement">
            <!-- Message si pas de PDFs -->
            <div x-show="pdfsFiltres.length === 0" class="text-center py-12">
                <svg class="mx-auto h-12 w-12 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                </svg>
                <h3 class="mt-2 text-sm font-medium font-display text-white">Aucun PDF</h3>
                <p class="mt-1 text-sm text-gray-400">Créez votre premier document PDF.</p>
                <div class="mt-6 flex flex-col sm:flex-row gap-3 justify-center">
                    <a href="/pdf/generer" 
                       class="inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium font-display rounded-md text-white bg-generique hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-generique focus:ring-offset-black">
                        <svg class="-ml-1 mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                        </svg>
                        Générer PDF personnage
                    </a>
                    <a href="/monsterhearts/document-generique" 
                       class="inline-flex items-center px-4 py-2 border border-gray-600 shadow-sm text-sm font-medium font-display rounded-md text-gray-300 bg-gray-800 hover:bg-gray-700 hover:text-white focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 focus:ring-offset-black">
                        <svg class="-ml-1 mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                        </svg>
                        Document générique
                    </a>
                </div>
                <p class="mt-3 text-xs text-gray-500">
                    Générez un PDF à partir d'un personnage existant ou créez un document générique (guide, aide de jeu, etc.)
                </p>
            </div>

            <!-- Liste des PDFs -->
            <div x-show="pdfsFiltres.length > 0" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                <template x-for="pdf in pdfsFiltres" :key="pdf.id">
                    <div class="bg-gray-900 border border-gray-700 rounded-lg hover:border-generique hover:shadow-lg hover:shadow-generique/20 transition-all duration-200">
                        <div class="p-6">
                            <div class="flex items-center justify-between mb-4">
                                <div class="flex-1">
                                    <h3 class="text-lg font-medium font-display text-white" x-text="pdf.nom || pdf.personnage_nom"></h3>
                                    <p class="text-sm text-gray-400" x-text="pdf.systeme_jeu"></p>
                                    <span :class="getStatutClass(pdf.statut)" 
                                          class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium font-display mt-1"
                                          x-text="pdf.statut">
                                    </span>
                                </div>
                                <div class="relative" x-data="{ ouvert: false }">
                                    <button @click="ouvert = !ouvert" 
                                            class="text-gray-400 hover:text-gray-300 focus:outline-none">
                                        <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 20 20">
                                            <path d="M10 6a2 2 0 110-4 2 2 0 010 4zM10 12a2 2 0 110-4 2 2 0 010 4zM10 18a2 2 0 110-4 2 2 0 010 4z"/>
                                        </svg>
                                    </button>
                                    <div x-show="ouvert" @click.away="ouvert = false"
                                         class="absolute right-0 mt-2 w-48 bg-gray-800 border border-gray-700 rounded-md shadow-lg z-10">
                                        <div class="py-1">
                                            <a :href="'/pdfs/' + pdf.id" 
                                               class="block px-4 py-2 text-sm text-gray-300 hover:bg-gray-700 hover:text-white">
                                                Voir le PDF
                                            </a>
                                            <button @click="telechargerPdf(pdf.id)" 
                                                    class="block w-full text-left px-4 py-2 text-sm text-gray-300 hover:bg-gray-700 hover:text-white">
                                                Télécharger
                                            </button>
                                            <button x-show="pdf.statut === 'ECHEC'" 
                                                    @click="relancerPdf(pdf.id)" 
                                                    class="block w-full text-left px-4 py-2 text-sm text-generique hover:bg-blue-900/20 hover:text-blue-300">
                                                Relancer
                                            </button>
                                            <button @click="supprimerPdf(pdf.id)" 
                                                    class="block w-full text-left px-4 py-2 text-sm text-red-400 hover:bg-red-900/20 hover:text-red-300">
                                                Supprimer
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="flex items-center justify-between text-sm text-gray-500">
                                <span x-text="'Créé le ' + new Date(pdf.date_creation).toLocaleDateString('fr-FR')"></span>
                                <span x-show="pdf.taille_fichier" x-text="formatTaille(pdf.taille_fichier)"></span>
                            </div>
                        </div>
                    </div>
                </template>
            </div>
        </div>
    </div>
</div>