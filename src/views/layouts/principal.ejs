<body class="bg-gray-50 min-h-screen">
    <!-- Navigation Mobile -->
    <nav class="bg-white shadow-lg border-b sticky top-0 z-40" x-data="window.AlpineComponents.navigationMobile()">
        <div class="max-w-7xl mx-auto px-4">
            <div class="flex justify-between items-center h-16">
                <!-- Logo -->
