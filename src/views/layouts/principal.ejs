                       placeholder="Code √† 6 chiffres" 
                       maxlength="6"
                       class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
                <div class="flex justify-end space-x-3 mt-4">
                    <button @click="fermer()" class="px-4 py-2 text-gray-600 hover:text-gray-800">Annuler</button>
                    <button @click="verifier()" 
                            :disabled="enTraitement || codeAcces.length !== 6"
                            class="px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700 disabled:opacity-50">
                        <span x-show="!enTraitement">V√©rifier</span>
                        <span x-show="enTraitement">V√©rification...</span>
                    </button>
                </div>
            </div>
        </div>
    </div>
    <% } %>
    
    <!-- Menu flottant lat√©ral -->
    <%- include('../partials/floating-menu') %>
    
    <!-- Bouton retour en haut -->
    <%- include('../partials/back-to-top') %>
    
    <!-- Contenu principal -->
    <main class="min-h-screen">
        <%- body %>
    </main>
    
    <!-- Footer -->
    <footer class="bg-gray-800 text-white py-8 mt-12">
        <div class="max-w-7xl mx-auto px-4 text-center">
            <p>&copy; 2024 G√©n√©rateur PDF JDR. Cr√©√© avec ‚ù§Ô∏è pour la communaut√© JDR.</p>
            <p class="text-sm text-gray-400 mt-2">
                Syst√®mes support√©s : Monsterhearts, Engrenages, Metro 2033, Mist Engine
            </p>
        </div>
    </footer>
</body>
</html>