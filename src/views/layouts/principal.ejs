    </div>
    
    <!-- Messages flash -->
    <div class="fixed top-20 right-4 z-50 space-y-2" x-data="window.AlpineComponents.messagesFlash()">
        <template x-for="message in messages" :key="message.id">
            <div class="bg-white rounded-lg shadow-lg p-4 min-w-80 max-w-md" 
                 :class="{
                     'border-l-4 border-green-500': message.type === 'succes',
                     'border-l-4 border-red-500': message.type === 'erreur',
                     'border-l-4 border-yellow-500': message.type === 'avertissement',
                     'border-l-4 border-blue-500': message.type === 'info'
