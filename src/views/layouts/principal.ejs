         class="bg-blue-500 text-white text-center py-1 text-xs">
        <span>üíæ Changements non sauvegard√©s</span>
    </div>
    
    <!-- Messages flash -->
    <div class="fixed top-20 right-4 z-50 space-y-2" x-data="window.AlpineComponents.messagesFlash()">
        <template x-for="message in messages" :key="message.id">
            <div class="bg-white rounded-lg shadow-lg p-4 min-w-80 max-w-md" 
                 :class="{
                     'border-l-4 border-green-500': message.type === 'succes',
                     'border-l-4 border-red-500': message.type === 'erreur',
                     'border-l-4 border-yellow-500': message.type === 'avertissement',
                     'border-l-4 border-blue-500': message.type === 'info'
                 }"
                 x-transition:enter="transform ease-out duration-300 transition"
                 x-transition:enter-start="translate-x-full opacity-0"
                 x-transition:enter-end="translate-x-0 opacity-100"
                 x-transition:leave="transition ease-in duration-300"
                 x-transition:leave-start="opacity-100"
                 x-transition:leave-end="opacity-0">
                <div class="flex items-start">
                    <div class="flex-shrink-0">
                        <span class="text-lg" x-text="obtenirIcone(message.type)"></span>
                    </div>
                    <div class="ml-3 flex-1">
                        <p class="text-sm font-medium text-gray-900" x-text="message.texte"></p>
                    </div>
                    <div class="ml-4 flex-shrink-0">
                        <button @click="supprimerMessage(message.id)" class="text-gray-400 hover:text-gray-600">
                            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"></path>
                            </svg>
                        </button>
                    </div>
                </div>
            </div>
        </template>
    </div>
    
    <!-- Modal √©l√©vation de r√¥le -->
    <% if (locals.utilisateur && locals.utilisateur.role === 'UTILISATEUR') { %>
    <div x-data="window.AlpineComponents.elevationRole()" 
         @open-role-elevation.window="ouvrir()"
         x-show="ouvert" 
         class="fixed inset-0 z-50 overflow-y-auto">
        <div class="flex items-center justify-center min-h-screen px-4">
            <div class="fixed inset-0 bg-black opacity-50" @click="fermer()"></div>
            <div class="relative bg-white rounded-lg p-6 w-full max-w-md">
                <h3 class="text-lg font-medium text-gray-900 mb-4">Code d'acc√®s Premium/Admin</h3>
                <input x-ref="inputCode" 
                       x-model="codeAcces" 
                       @keydown="gererTouche($event)"
