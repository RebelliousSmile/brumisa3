                                <% } %>
                                <% if (locals.utilisateur.role !== 'UTILISATEUR') { %>
                                <a href="/admin" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">Administration</a>
                                <% } %>
                                <button @click="deconnecter()" class="block w-full text-left px-4 py-2 text-sm text-red-600 hover:bg-red-50">Se d√©connecter</button>
                            </div>
                        </div>
