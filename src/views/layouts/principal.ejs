                    <a href="/" class="text-xl font-bold text-gray-800 flex items-center">
                        üé≤ <span class="hidden sm:inline ml-2">G√©n√©rateur PDF JDR</span>
                    </a>
                </div>
                
                <!-- Menu desktop -->
                <div class="hidden md:flex items-center space-x-6">
                    <% if (locals.utilisateur) { %>
                        <a href="/" class="text-gray-600 hover:text-gray-900">Accueil</a>
                        <a href="/personnages" class="text-gray-600 hover:text-gray-900">Personnages</a>
                        <a href="/pdfs" class="text-gray-600 hover:text-gray-900">Mes PDFs</a>
                        
                        <!-- Menu utilisateur -->
                        <div class="relative" x-data="window.AlpineComponents.menuUtilisateur()">
                            <button @click="basculer()" class="flex items-center space-x-2 text-gray-600 hover:text-gray-900">
                                <span><%= locals.utilisateur.nom %></span>
                                <span class="text-xs px-2 py-1 rounded bg-gray-200"><%= locals.utilisateur.role %></span>
                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                                </svg>
                            </button>
                            
                            <div x-show="ouvert" @click.away="fermer()" x-transition 
                                 class="absolute right-0 mt-2 w-48 bg-white rounded-md shadow-lg py-1 z-50">
                                <% if (locals.utilisateur.role === 'UTILISATEUR') { %>
                                <button @click="$dispatch('open-role-elevation')" class="block w-full text-left px-4 py-2 text-sm text-blue-600 hover:bg-blue-50">
                                    D√©bloquer Premium/Admin
