                    <button @click="basculerMenu()" class="text-gray-600 hover:text-gray-900">
                        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
                        </svg>
                    </button>
                </div>
            </div>
            
            <!-- Menu mobile dropdown -->
            <div x-show="menuOuvert" x-transition class="md:hidden border-t border-gray-200 py-2">
                <% if (locals.utilisateur) { %>
                    <a @click="naviguer('/')" class="block px-4 py-2 text-gray-600 hover:bg-gray-100">Accueil</a>
                    <a @click="naviguer('/mes-documents')" class="block px-4 py-2 text-gray-600 hover:bg-gray-100">Mes documents</a>
