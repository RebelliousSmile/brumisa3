<!-- Layout générique pour pages communes -->
<div class="min-h-screen bg-gray-900 relative overflow-hidden">
    <!-- Background Effects -->
    <div class="absolute inset-0 bg-gradient-to-br from-blue-900/20 via-blue-800/30 to-gray-900"></div>
    <div class="absolute inset-0">
        <div class="absolute top-20 left-10 w-72 h-72 bg-blue-500/10 rounded-full filter blur-3xl"></div>
        <div class="absolute bottom-20 right-10 w-96 h-96 bg-blue-500/10 rounded-full filter blur-3xl"></div>
    </div>

    <!-- Navigation principale -->
    <%- include('../layouts/principal') %>

    <!-- Fil d'Ariane -->
    <%- include('../partials/breadcrumb') %>

    <!-- Contenu principal -->
    <main class="relative z-10">
        <%- body %>
    </main>

    <!-- Footer -->
    <%- include('../partials/footer-systeme', { systeme: 'generique' }) %>
</div>

