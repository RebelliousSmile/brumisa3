# Configuration production - brumisater
# Variables d'environnement critiques pour production

NODE_ENV=production
PORT=3000
HOST=0.0.0.0

# Base de données PostgreSQL (OBLIGATOIRE)
DATABASE_URL=postgresql://user:password@host:5432/brumisater_prod
# OU séparément :
# POSTGRES_HOST=your-prod-host
# POSTGRES_PORT=5432
# POSTGRES_DB=brumisater_prod
# POSTGRES_USER=brumisater_user
# POSTGRES_PASSWORD=super_secure_password

# Sécurité (OBLIGATOIRE - CHANGEZ CES VALEURS)
SESSION_SECRET=your-super-secure-session-secret-min-32-chars
CODE_PREMIUM=your-premium-code
CODE_ADMIN=your-admin-code

# SSL et HTTPS
FORCE_HTTPS=true
TRUST_PROXY=true

# Logs production
LOG_LEVEL=info
LOG_DIR=/var/log/brumisater

# Répertoires production
DATA_DIR=/var/lib/brumisater/data
OUTPUT_DIR=/var/lib/brumisater/output
UPLOAD_DIR=/var/lib/brumisater/uploads

# Limites de sécurité
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100
PDF_TIMEOUT=30000
PDF_MAX_SIZE=10485760

# Email production (OBLIGATOIRE)
RESEND_API_KEY=your_production_resend_api_key
EMAIL_FROM=noreply@yourdomain.com

# Monitoring (optionnel)
# SENTRY_DSN=your_sentry_dsn
# NEW_RELIC_LICENSE_KEY=your_newrelic_key