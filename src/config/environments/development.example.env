# Configuration développement - brumisater
# Copier ce fichier en .env.local et personnaliser

NODE_ENV=development
PORT=3000
HOST=localhost

# Base de données PostgreSQL
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=brumisater_dev
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password

# Sécurité
SESSION_SECRET=dev-secret-key-change-in-production
CODE_PREMIUM=dev123
CODE_ADMIN=admin123

# Logs et debug
LOG_LEVEL=debug
LOG_DIR=./logs

# Répertoires
DATA_DIR=./data
OUTPUT_DIR=./output
UPLOAD_DIR=./uploads

# Limites
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=1000
PDF_TIMEOUT=30000
PDF_MAX_SIZE=10485760

# Email (optionnel en dev)
# RESEND_API_KEY=your_resend_api_key
# EMAIL_FROM=noreply@brumisater.local